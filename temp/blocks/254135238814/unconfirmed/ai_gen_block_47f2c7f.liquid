      "max": 10,
      "step": 0.5,
      "unit": "px",
      "label": "Letter spacing",
      "default": 2
    },
    {
      "type": "range",
      "id": "text_spacing",
      "min": 20,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Space between text",
      "default": 80
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000f9f"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Vertical padding",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Scrolling Marquee Text"
    }
  ]
}
{% endschema %}