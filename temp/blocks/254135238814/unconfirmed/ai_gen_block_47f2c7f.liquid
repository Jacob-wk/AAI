{% doc %}
  @prompt
    scrolling marquee text that shows "Learn with AAI"

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
  }

  .ai-marquee-wrapper-{{ ai_gen_id }} {
    display: flex;
    white-space: nowrap;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-marquee-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: {{ block.settings.font_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    margin-right: {{ block.settings.text_spacing }}px;
    flex-shrink: 0;
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .ai-marquee-container-{{ ai_gen_id }}:hover .ai-marquee-wrapper-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div 
  class="ai-marquee-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-marquee-wrapper-{{ ai_gen_id }}">
    {% for i in (1..block.settings.repeat_count) %}
      <span class="ai-marquee-text-{{ ai_gen_id }}">
        {{ block.settings.marquee_text }}
      </span>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Scrolling Marquee Text",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "marquee_text",
      "label": "Marquee text",
      "default": "Learn with AAI"
