{% doc %}
  @prompt
    scrolling banner marquee reading: Learn More With AAI

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-scrolling-banner-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 0;
    position: relative;
  }

  .ai-scrolling-banner-track-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    animation: ai-scroll-{{ ai_gen_id }} {{ block.settings.speed }}s linear infinite;
    white-space: nowrap;
  }

  .ai-scrolling-banner-item-{{ ai_gen_id }} {
    flex-shrink: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    margin-right: {{ block.settings.spacing }}px;
    text-transform: {{ block.settings.text_transform }};
  }

  @keyframes ai-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-scrolling-banner-{{ ai_gen_id }}:hover .ai-scrolling-banner-track-{{ ai_gen_id }} {
    animation-play-state: {{ block.settings.pause_on_hover | default: 'running' }};
  }

  @media screen and (max-width: 749px) {
    .ai-scrolling-banner-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
      margin-right: {{ block.settings.spacing | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-scrolling-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-scrolling-banner-track-{{ ai_gen_id }}">
    {% assign repeat_count = block.settings.repeat_count %}
    {% for i in (1..repeat_count) %}
      <div class="ai-scrolling-banner-item-{{ ai_gen_id }}">
        {{ block.settings.banner_text }}
      </div>
    {% endfor %}
    {% for i in (1..repeat_count) %}
      <div class="ai-scrolling-banner-item-{{ ai_gen_id }}">
        {{ block.settings.banner_text }}
      </div>
    {% endfor %}
  </div>
</div>

