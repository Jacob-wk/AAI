{% comment %}
  Content Block - Flexible content container for AAI theme
  Used in: Templates for general content display
{% endcomment %}

<div class="content-block">
  {% if block.settings.heading != blank %}
    <h{{ block.settings.heading_level | default: 2 }} class="content-block-heading">
      {{ block.settings.heading }}
    </h{{ block.settings.heading_level | default: 2 }}>
  {% endif %}
  
  {% if block.settings.content != blank %}
    <div class="content-block-text">
      {{ block.settings.content }}
    </div>
  {% endif %}
  
  {% if block.settings.button_text != blank %}
    <a href="{{ block.settings.button_url | default: '#' }}" class="content-block-button btn">
      {{ block.settings.button_text }}
    </a>
  {% endif %}
</div>

{% schema %}
{
  "name": "Content Block",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Content Heading"
    },
    {
      "type": "select",
      "id": "heading_level",
      "label": "Heading Level",
      "options": [
        { "value": "2", "label": "H2" },
        { "value": "3", "label": "H3" },
        { "value": "4", "label": "H4" }
      ],
      "default": "2"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Enter your content here...</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ]
}
{% endschema %}
