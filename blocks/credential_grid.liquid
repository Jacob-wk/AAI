<div class="credential-grid" 
     data-columns="{{ block.settings.grid_columns }}"
     data-layout="{{ block.settings.grid_layout }}">
  
  {% if block.settings.grid_title != blank %}
    <div class="grid-header">
      <h2 class="grid-title">{{ block.settings.grid_title }}</h2>
      {% if block.settings.grid_description != blank %}
        <p class="grid-description">{{ block.settings.grid_description }}</p>
      {% endif %}
    </div>
  {% endif %}
  
  <div class="credentials-container">
    <!-- Credential 1 -->
    {% if block.settings.credential_1_name != blank %}
      <div class="credential-item">
        {% if block.settings.credential_1_logo != blank %}
          <div class="credential-logo">
            <img src="{{ block.settings.credential_1_logo | image_url: width: 120 }}" 
                 alt="{{ block.settings.credential_1_name }}" 
                 width="120" height="80" loading="lazy">
          </div>
        {% endif %}
        <div class="credential-info">
          <h3 class="credential-name">{{ block.settings.credential_1_name }}</h3>
          {% if block.settings.credential_1_organization != blank %}
            <p class="credential-organization">{{ block.settings.credential_1_organization }}</p>
          {% endif %}
          {% if block.settings.credential_1_description != blank %}
            <p class="credential-description">{{ block.settings.credential_1_description }}</p>
          {% endif %}
          {% if block.settings.credential_1_url != blank %}
            <a href="{{ block.settings.credential_1_url }}" class="credential-link">View Credential</a>
          {% endif %}
        </div>
      </div>
    {% endif %}
    
    <!-- Credential 2 -->
