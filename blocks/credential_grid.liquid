          {% if block.settings.credential_2_organization != blank %}
            <p class="credential-organization">{{ block.settings.credential_2_organization }}</p>
          {% endif %}
          {% if block.settings.credential_2_description != blank %}
            <p class="credential-description">{{ block.settings.credential_2_description }}</p>
          {% endif %}
          {% if block.settings.credential_2_url != blank %}
            <a href="{{ block.settings.credential_2_url }}" class="credential-link">View Credential</a>
          {% endif %}
        </div>
      </div>
    {% endif %}
    
    <!-- Credential 3 -->
    {% if block.settings.credential_3_name != blank %}
      <div class="credential-item">
        {% if block.settings.credential_3_logo != blank %}
          <div class="credential-logo">
