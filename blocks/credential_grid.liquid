        <div class="credential-info">
          <h3 class="credential-name">{{ block.settings.credential_4_name }}</h3>
          {% if block.settings.credential_4_organization != blank %}
            <p class="credential-organization">{{ block.settings.credential_4_organization }}</p>
          {% endif %}
          {% if block.settings.credential_4_description != blank %}
