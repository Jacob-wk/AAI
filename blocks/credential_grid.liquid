          {% endif %}
          {% if block.settings.credential_4_url != blank %}
            <a href="{{ block.settings.credential_4_url }}" class="credential-link">View Credential</a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

