          {% endif %}
          {% if block.settings.credential_3_description != blank %}
            <p class="credential-description">{{ block.settings.credential_3_description }}</p>
          {% endif %}
          {% if block.settings.credential_3_url != blank %}
            <a href="{{ block.settings.credential_3_url }}" class="credential-link">View Credential</a>
          {% endif %}
        </div>
      </div>
    {% endif %}
    
    <!-- Credential 4 -->
    {% if block.settings.credential_4_name != blank %}
      <div class="credential-item">
        {% if block.settings.credential_4_logo != blank %}
