{% comment %}
  Credential Block - Professional certification display for AAI
  Used in: About page, instructor profiles, etc.
{% endcomment %}

<div class="credential-block">
  {% if block.settings.credential_logo != blank %}
    <div class="credential-logo">
      <img src="{{ block.settings.credential_logo | image_url: width: 120 }}" 
           alt="{{ block.settings.credential_name }}" 
           loading="lazy">
    </div>
  {% endif %}
  
  <div class="credential-content">
    {% if block.settings.credential_name != blank %}
      <h4 class="credential-name">{{ block.settings.credential_name }}</h4>
    {% endif %}
    
    {% if block.settings.issuing_organization != blank %}
      <p class="credential-issuer">{{ block.settings.issuing_organization }}</p>
    {% endif %}
    
    {% if block.settings.description != blank %}
      <p class="credential-description">{{ block.settings.description }}</p>
    {% endif %}
    
    {% if block.settings.credential_url != blank %}
      <a href="{{ block.settings.credential_url }}" class="credential-link" target="_blank">
        Learn More
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Credential",
  "settings": [
    {
      "type": "image_picker",
      "id": "credential_logo",
      "label": "Credential Logo"
    },
    {
      "type": "text",
      "id": "credential_name",
      "label": "Credential Name",
      "default": "IAAPA Certified"
    },
    {
      "type": "text",
      "id": "issuing_organization",
      "label": "Issuing Organization",
      "default": "International Association of Amusement Parks and Attractions"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Professional certification in amusement industry safety"
    },
    {
      "type": "url",
      "id": "credential_url",
      "label": "Credential URL"
    }
  ]
}
{% endschema %}
