{% comment %}
  Text Block
  Used within aai-universal-content sections
{% endcomment %}

<div class="text-block {% if block.settings.alignment %}text-{{ block.settings.alignment }}{% endif %}">
  {% if block.settings.heading != blank %}
    <h3 class="text-block-heading">{{ block.settings.heading }}</h3>
  {% endif %}
  
  {% if block.settings.subheading != blank %}
    <h4 class="text-block-subheading">{{ block.settings.subheading }}</h4>
  {% endif %}
  
  {% if block.settings.content != blank %}
    <div class="text-block-content">{{ block.settings.content }}</div>
  {% endif %}
  
  {% if block.settings.button_text != blank and block.settings.button_url != blank %}
    <div class="text-block-button">
      <a href="{{ block.settings.button_url }}" class="btn btn-primary">
        {{ block.settings.button_text }}
      </a>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Text Block",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Professional Safety Training"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Industry-Leading Education"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Advance your career with comprehensive safety training designed by industry experts. Our programs meet the highest standards and provide the credentials you need to succeed.</p>"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/pages/about"
    }
  ]
}
{% endschema %}
