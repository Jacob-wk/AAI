<div class="navigation-link resources-link">
  {% if block.settings.link_url != blank %}
    <a href="{{ block.settings.link_url }}" class="nav-link resources-nav">
      <span class="nav-icon">
        {% if block.settings.icon != blank %}
          <img src="{{ block.settings.icon | image_url: width: 24 }}" alt="Resources" width="24" height="24">
        {% else %}
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M14 2H6C4.9 2 4 2.9 4 4V20C4 21.1 4.9 22 6 22H18C19.1 22 20 21.1 20 20V8L14 2ZM18 20H6V4H13V9H18V20Z" fill="currentColor"/>
          </svg>
        {% endif %}
      </span>
      <span class="nav-text">{{ block.settings.link_text | default: 'Resources' }}</span>
    </a>
  {% else %}
    <span class="nav-link resources-nav disabled">
      <span class="nav-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M14 2H6C4.9 2 4 2.9 4 4V20C4 21.1 4.9 22 6 22H18C19.1 22 20 21.1 20 20V8L14 2ZM18 20H6V4H13V9H18V20Z" fill="currentColor"/>
        </svg>
      </span>
      <span class="nav-text">{{ block.settings.link_text | default: 'Resources' }}</span>
    </span>
  {% endif %}
</div>

{% schema %}
{
  "name": "Resources Link",
  "settings": [
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Resources"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Custom Icon"
    }
  ]
}
{% endschema %}
