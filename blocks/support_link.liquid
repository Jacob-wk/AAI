<div class="navigation-link support-link">
  {% if block.settings.link_url != blank %}
    <a href="{{ block.settings.link_url }}" class="nav-link support-nav">
      <span class="nav-icon">
        {% if block.settings.icon != blank %}
          <img src="{{ block.settings.icon | image_url: width: 24 }}" alt="Support" width="24" height="24">
        {% else %}
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM13 19H11V17H13V19ZM15.07 11.25L14.17 12.17C13.45 12.9 13 13.5 13 15H11V14.5C11 13.4 11.45 12.4 12.17 11.67L13.41 10.41C13.78 10.05 14 9.55 14 9C14 7.9 13.1 7 12 7C10.9 7 10 7.9 10 9H8C8 6.79 9.79 5 12 5C14.21 5 16 6.79 16 9C16 9.88 15.64 10.68 15.07 11.25Z" fill="currentColor"/>
          </svg>
        {% endif %}
      </span>
      <span class="nav-text">{{ block.settings.link_text | default: 'Support' }}</span>
    </a>
  {% else %}
    <span class="nav-link support-nav disabled">
      <span class="nav-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM13 19H11V17H13V19ZM15.07 11.25L14.17 12.17C13.45 12.9 13 13.5 13 15H11V14.5C11 13.4 11.45 12.4 12.17 11.67L13.41 10.41C13.78 10.05 14 9.55 14 9C14 7.9 13.1 7 12 7C10.9 7 10 7.9 10 9H8C8 6.79 9.79 5 12 5C14.21 5 16 6.79 16 9C16 9.88 15.64 10.68 15.07 11.25Z" fill="currentColor"/>
        </svg>
      </span>
      <span class="nav-text">{{ block.settings.link_text | default: 'Support' }}</span>
    </span>
  {% endif %}
</div>

{% schema %}
{
  "name": "Support Link",
  "settings": [
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Support"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Custom Icon"
    }
  ]
}
{% endschema %}
