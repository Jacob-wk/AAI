      "label": "Primary Button URL"
    },
    {
      "type": "header",
      "content": "Secondary Button"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Secondary Button URL"
    },
    {
      "type": "header",
      "content": "Tertiary Button"
    },
    {
      "type": "text",
      "id": "tertiary_button_text",
      "label": "Tertiary Button Text"
    },
    {
      "type": "url",
      "id": "tertiary_button_url",
      "label": "Tertiary Button URL"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "select",
      "id": "button_size",
      "label": "Button Size",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium"
    },
    {
      "type": "richtext",
      "id": "disclaimer_text",
      "label": "Disclaimer Text",
      "info": "Small text that appears below the buttons"
    }
  ],
  "presets": [
    {
      "name": "AAI Button Group"
    }
  ]
}
{% endschema %}
