        {
          "type": "text",
          "id": "experience_company",
          "label": "Company/Organization",
          "default": "Theme Park Safety Solutions"
        },
        {
          "type": "textarea",
          "id": "experience_description",
          "label": "Description",
          "default": "Led safety initiatives across multiple theme park properties, implementing comprehensive training programs and safety protocols."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instructor Profile",
      "blocks": [
        {
          "type": "credential",
          "settings": {
            "credential_name": "Certified Safety Professional",
            "credential_org": "IAAPA"
          }
        },
        {
          "type": "experience",
          "settings": {
            "experience_role": "Senior Safety Manager",
            "experience_company": "Theme Park Safety Solutions"
          }
        }
      ]
    }
  ]
}
{% endschema %}
