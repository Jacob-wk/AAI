{% comment %}
  Help Center Hero Section
{% endcomment %}

{{ 'section-help-center.css' | asset_url | stylesheet_tag }}

<div class="help-hero {{ section.settings.background_style }}">
  <div class="aai-container">
    <h1 class="help-title">{{ section.settings.title }}</h1>
    <p class="help-subtitle">{{ section.settings.subtitle }}</p>
    
    {% if section.settings.show_search %}
      <div class="help-search">
        <input type="text" id="help-search-{{ section.id }}" placeholder="{{ section.settings.search_placeholder }}" class="search-input">
        <button class="search-btn" aria-label="Search">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Help Center Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "AAI Help Center"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Get the support you need to succeed in your professional safety education journey. Find answers, access resources, and connect with our expert support team."
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show Search Bar",
      "default": true
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search Placeholder Text",
      "default": "Search for help topics..."
    },
    {
      "type": "select",
      "id": "background_style",
      "label": "Background Style",
      "options": [
        { "value": "section-alt-1", "label": "Alternative Background 1" },
        { "value": "section-alt-2", "label": "Alternative Background 2" },
        { "value": "section-dark", "label": "Dark Background" },
        { "value": "", "label": "Default" }
      ],
      "default": "section-alt-1"
    }
  ],
  "presets": [
    {
      "name": "Help Center Hero",
      "settings": {
        "title": "AAI Help Center",
        "subtitle": "Your primary resource for AAI platform support and guidance.",
        "show_search": true,
        "search_placeholder": "Search FAQs and articles...",
        "background_style": "section-alt-1"
      }
    }
  ]
}
{% endschema %}
