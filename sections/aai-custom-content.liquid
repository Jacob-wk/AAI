{% comment %}
  Section: AAI Custom Content
  Allows for flexible HTML content.
{% endcomment %}

<div class="aai-custom-content-section page-width color-{{ section.settings.color_scheme }}">
  <div class="section-header">
    {% if section.settings.section_title != blank %}
      <h2 class="section-title">{{ section.settings.section_title | escape }}</h2>
    {% endif %}
    {% if section.settings.section_subtitle != blank %}
      <p class="section-subtitle">{{ section.settings.section_subtitle | escape }}</p>
    {% endif %}
  </div>

  <div class="custom-html-content">
    {{ section.settings.html_content }}
  </div>
  
  <!-- Theme blocks and app blocks -->
  {% if section.blocks.size > 0 %}
    <div class="custom-content-blocks">
      {% for block in section.blocks %}
        <div class="custom-theme-block" {{ block.shopify_attributes }}>
          {% render block %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "AAI Custom Content",
  "category": "AAI Content",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "html",
      "id": "html_content",
      "label": "HTML Content"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "options": [
        { "value": "color-scheme-1", "label": "Scheme 1" },
        { "value": "color-scheme-2", "label": "Scheme 2" },
        { "value": "color-scheme-background-1", "label": "Background 1" },
        { "value": "color-scheme-background-2", "label": "Background 2" }
      ],
      "default": "color-scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "AAI Custom Content"
    }
  ]
}
{% endschema %}
