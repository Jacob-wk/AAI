{% comment %}
  Course Curriculum Section
  - Displays course curriculum and learning objectives
  - Professional AAI styling for educational content
{% endcomment %}

{{ 'section-course-curriculum.css' | asset_url | stylesheet_tag }}

<section class="course-curriculum">
  <div class="aai-container">
    {% if section.settings.section_title != blank %}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="curriculum-content">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'module' %}
            <div class="curriculum-module" {{ block.shopify_attributes }}>
              <div class="module-header">
                <h3 class="module-title">{{ block.settings.module_title }}</h3>
                {% if block.settings.module_duration != blank %}
                  <span class="module-duration">{{ block.settings.module_duration }}</span>
                {% endif %}
              </div>
              {% if block.settings.module_description != blank %}
                <p class="module-description">{{ block.settings.module_description }}</p>
              {% endif %}
              {% if block.settings.learning_objectives != blank %}
                <div class="learning-objectives">
                  <h4>Learning Objectives:</h4>
                  <div class="objectives-list">{{ block.settings.learning_objectives }}</div>
                </div>
              {% endif %}
            </div>
          {% when 'lesson' %}
            <div class="curriculum-lesson" {{ block.shopify_attributes }}>
              <div class="lesson-info">
                <h4 class="lesson-title">{{ block.settings.lesson_title }}</h4>
                {% if block.settings.lesson_type != blank %}
                  <span class="lesson-type">{{ block.settings.lesson_type }}</span>
                {% endif %}
              </div>
              {% if block.settings.lesson_description != blank %}
                <p class="lesson-description">{{ block.settings.lesson_description }}</p>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.show_cta %}
      <div class="curriculum-cta">
        <a href="{{ section.settings.cta_url | default: '/collections/courses' }}" class="aai-btn-primary">
          {{ section.settings.cta_text | default: 'Enroll Now' }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Course Curriculum",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title",
      "default": "Course Curriculum"
    },
    {
      "type": "textarea",
      "id": "section_subtitle",
      "label": "Section subtitle",
      "default": "Comprehensive learning modules designed by industry experts"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show call to action",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA button text",
      "default": "Enroll Now"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA button URL"
    }
  ],
  "blocks": [
    {
      "type": "module",
      "name": "Course Module",
      "settings": [
        {
          "type": "text",
          "id": "module_title",
          "label": "Module title",
          "default": "Safety Fundamentals"
        },
        {
          "type": "text",
