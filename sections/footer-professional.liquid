{% comment %}
AAI Professional Footer - Updated to 3-column layout
- Left: AAI brand info + description
- Middle: Education links + Join AAI section  
- Right: Company links + contact info + 501(c)(3) statement
{% endcomment %}

<footer class="aai-footer">
  <div class="aai-container">
    <div class="aai-footer-content">
      <div class="aai-footer-brand">
        <h3>{{ section.settings.brand_title | default: 'AAI Institute' }}</h3>
        <p>{{ section.settings.brand_description | default: "Leading the industry in professional safety education since 2025. We're committed to keeping the amusement industry safe while respecting the joy it brings to millions." }}</p>
        <div class="aai-accreditations">
          {% if section.settings.show_accreditations %}
            <span class="aai-accreditation-badge">{{ section.settings.accreditation_1 | default: 'IAAPA Member' }}</span>
            <span class="aai-accreditation-badge">{{ section.settings.accreditation_2 | default: 'ASTM F24' }}</span>
            <span class="aai-accreditation-badge">{{ section.settings.accreditation_3 | default: 'NAARSO' }}</span>
          {% endif %}
        </div>
      </div>
      
      <div class="aai-footer-section">
        <h4>{{ section.settings.education_title | default: 'Education' }}</h4>
        <ul>
          {% for block in section.blocks %}
            {% if block.type == 'education_link' %}
              <li><a href="{{ block.settings.url }}">{{ block.settings.text }}</a></li>
            {% endif %}
          {% endfor %}
          {% unless section.blocks contains 'education_link' %}
            <li><a href="{{ section.settings.courses_url | default: '/collections/courses' }}">All Courses</a></li>
            <li><a href="{{ section.settings.courses_in_development_url | default: '/pages/courses-development' }}">Courses in Development</a></li>
          {% endunless %}
        </ul>

        <h4 style="margin-top: 24px;">{{ section.settings.join_aai_title | default: 'Join AAI' }}</h4>
        <ul>
          {% for block in section.blocks %}
            {% if block.type == 'join_aai_link' %}
              <li><a href="{{ block.settings.url }}">{{ block.settings.text }}</a></li>
            {% endif %}
          {% endfor %}
          {% unless section.blocks contains 'join_aai_link' %}
            <li><a href="{{ section.settings.member_url | default: '/account/register' }}">Become a Member</a></li>
            <li><a href="{{ section.settings.instructor_url | default: '/pages/instructor-application' }}">Become an Instructor</a></li>
            <li><a href="{{ section.settings.partner_url | default: '/pages/partnerships' }}">Partner with Us</a></li>
          {% endunless %}
        </ul>
      </div>
      
      <div class="aai-footer-section">
        <h4>{{ section.settings.company_title | default: 'Company' }}</h4>
        <ul>
          {% for block in section.blocks %}
            {% if block.type == 'company_link' %}
              <li><a href="{{ block.settings.url }}">{{ block.settings.text }}</a></li>
            {% endif %}
          {% endfor %}
          {% unless section.blocks contains 'company_link' %}
            <li><a href="{{ section.settings.about_url | default: '/pages/about' }}">About AAI</a></li>
            <li><a href="{{ section.settings.contact_url | default: '/pages/contact' }}">Contact Us</a></li>
            <li><a href="{{ section.settings.help_url | default: '/pages/help-center' }}">Help Center</a></li>
          {% endunless %}
        </ul>

        {% if section.settings.address != blank or section.settings.email != blank or section.settings.phone != blank %}
          <div class="aai-footer-contact" style="margin-top: 24px;">
            {% if section.settings.address != blank %}
              <div class="aai-contact-item">
                <span class="aai-contact-icon">üìç</span>
                <span>{{ section.settings.address }}</span>
              </div>
            {% endif %}
            {% if section.settings.email != blank %}
              <div class="aai-contact-item">
                <span class="aai-contact-icon">‚úâÔ∏è</span>
                <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
              </div>
            {% endif %}
            {% if section.settings.phone != blank %}
              <div class="aai-contact-item">
                <span class="aai-contact-icon">üìû</span>
                <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.show_nonprofit_statement %}
          <p class="aai-nonprofit-statement" style="margin-top: 16px; color: rgba(255, 255, 255, 0.8); font-size: 0.9rem; line-height: 1.5;">
            {{ section.settings.nonprofit_statement | default: "AAI is a 501(c)(3) nonprofit organization dedicated to advancing safety education in the amusement industry." }}
          </p>
        {% endif %}
      </div>
    </div>
    
    <div class="aai-footer-bottom">
      <p>{{ section.settings.copyright_text | default: '&copy; 2025 AAI Amusement Adventure Institute. All rights reserved.' }} | 
         <a href="{{ section.settings.privacy_url | default: '/policies/privacy-policy' }}">Privacy Policy</a> | 
         <a href="{{ section.settings.terms_url | default: '/policies/terms-of-service' }}">Terms of Service</a></p>
    </div>
  </div>
</footer>

