{% comment %}
  AAI Universal Content - Using Horizon theme blocks with AAI styling
  Now supports AI generation while maintaining educational focus
{% endcomment %}

{{ 'section-aai-content.css' | asset_url | stylesheet_tag }}

<section class="aai-content page-section {{ section.settings.background_style }} {{ section.settings.color_scheme }}">
  <div class="aai-container">
    {% if section.settings.section_title != blank %}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    {% if section.settings.show_main_content %}
      <div class="content-text">
        {% if section.settings.content_title != blank %}
          <h3>{{ section.settings.content_title }}</h3>
        {% endif %}
        
        {% if section.settings.content_body != blank %}
          <div class="content-body">
            {{ section.settings.content_body }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <!-- Theme blocks rendered with AAI styling context -->
    <div class="aai-blocks-container" data-layout="{{ section.settings.layout_style }}">
      {% content_for 'blocks' %}
    </div>

    {% if section.settings.main_button_text != blank %}
      <div class="content-cta">
        <a href="{{ section.settings.main_button_url }}" 
           class="aai-btn aai-btn-{{ section.settings.main_button_style }} aai-btn-{{ section.settings.main_button_size }}">
          {{ section.settings.main_button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "AAI Universal Content",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title"
    },
    {
      "type": "textarea",
      "id": "section_subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "header",
      "content": "Layout & Style"
    },
    {
      "type": "select",
      "id": "layout_style",
      "label": "Content Layout",
      "options": [
        { "value": "timeline", "label": "Timeline" },
        { "value": "blocks-grid", "label": "Content Grid" },
        { "value": "text-center", "label": "Centered" }
      ],
      "default": "blocks-grid"
    },
    {
      "type": "select",
      "id": "background_style",
      "label": "Background Style",
      "options": [
        { "value": "", "label": "Default" },
        { "value": "section-alt-1", "label": "Alternative Background 1" },
        { "value": "section-alt-2", "label": "Alternative Background 2" },
        { "value": "section-dark", "label": "Dark Background" }
      ],
      "default": ""
    },
    {
      "type": "header",
      "content": "Main Content"
    },
    {
      "type": "checkbox",
      "id": "show_main_content",
      "label": "Show Section Content",
      "default": true
    },
    {
      "type": "text",
      "id": "content_title",
      "label": "Content Title"
    },
    {
      "type": "richtext",
      "id": "content_body",
      "label": "Content Body"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "main_button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "main_button_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "main_button_style",
      "label": "Button Style",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" },
        { "value": "outline", "label": "Outline" }
      ],
      "default": "primary"
    },
    {
      "type": "select",
      "id": "main_button_size",
      "label": "Button Size",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium"
    }
  ],
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "AAI Universal Content",
      "category": "AAI Content",
      "settings": {
        "section_title": "Discover Our Expertise",
        "section_subtitle": "Comprehensive training for Family Entertainment Center professionals",
        "content_title": "Welcome to AAI Learning",
        "content_body": "<p>Amusement Adventure Institute (AAI) provides industry-leading safety and operational training for Family Entertainment Centers and adventure parks.</p>",
        "layout_style": "blocks-grid",
        "show_main_content": true
      }
    },
    {
      "name": "AAI Timeline Content",
      "category": "AAI Content",
      "settings": {
        "section_title": "Our Training Journey",
        "content_title": "Step-by-Step Professional Development",
        "content_body": "<p>Follow our structured approach to FEC safety certification.</p>",
        "layout_style": "timeline",
        "show_main_content": true
      }
    },
    {
      "name": "AAI Call to Action",
      "category": "AAI Content",
      "settings": {
        "section_title": "Ready to Elevate Your FEC Career?",
        "content_title": "Take the Next Step",
        "content_body": "<p>Join thousands of professionals who trust AAI for their safety training.</p>",
        "background_style": "section-alt-1",
        "main_button_text": "Explore Courses",
        "main_button_url": "/collections/courses",
        "layout_style": "text-center"
      }
    }
  ]
}
{% endschema %}

