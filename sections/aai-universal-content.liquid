{% comment %}
  Universal Content Section - Flexible content blocks for any AAI page
  Supports text, images, lists, and various layout options
{% endcomment %}

{{ 'section-aai-content.css' | asset_url | stylesheet_tag }}

<section class="aai-content page-section {{ section.settings.background_style }} {{ section.settings.color_scheme }}">
  <div class="aai-container">
    {% if section.settings.section_title != blank %}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="content-grid" data-layout="{{ section.settings.layout_style }}">
      {% if section.settings.show_main_content %}
        <div class="content-text">
          {% if section.settings.content_title != blank %}
            <h3>{{ section.settings.content_title }}</h3>
          {% endif %}
          
          {% if section.settings.content_body != blank %}
            <div class="content-body">
              {{ section.settings.content_body }}
            </div>
          {% endif %}
          
          {% if section.blocks.size > 0 %}
            {% if section.settings.layout_style == 'timeline' %}
              <div class="content-timeline">
                {% for block in section.blocks %}
                  {% case block.type %}
                    {% when 'content_block','text_block' %}
                      {%- assign block_title = block.settings.block_title | default: block.settings.title | default: '' -%}
                      {%- assign block_content = block.settings.block_content | default: block.settings.content | default: '' -%}
                      {%- comment -%} Determine image width mapping (reuse same mapping as content blocks) {%- endcomment -%}
                      {% if block.settings.image_size == 'small' %}
                        {% assign __img_width = 300 %}
                      {% elsif block.settings.image_size == 'medium' %}
                        {% assign __img_width = 500 %}
                      {% elsif block.settings.image_size == 'large' %}
                        {% assign __img_width = 800 %}
                      {% elsif block.settings.image_size == 'full-width' %}
                        {% assign __img_width = 1600 %}
                      {% else %}
                        {% assign __img_width = 800 %}
                      {% endif %}
                      {%- assign placement = block.settings.image_placement | default: 'text-only' -%}
                      <div class="timeline-item" {{ block.shopify_attributes }}>
                        <div class="timeline-marker"></div>
                        <div class="timeline-content {% if placement == 'text-only' %}text-block{% endif %}">
                          {%- comment -%} If media exists for a content_block, render it above the text in timeline items for visual consistency {%- endcomment -%}
                          {% if placement != 'text-only' and (block.settings.image != blank or block.settings.video != blank or block.settings.media_type == 'video') %}
                            <div class="timeline-media">
                              {% render 'aai-media-block', block: block, img_width: __img_width, placement: placement %}
                              {% if block.settings.image_caption != blank %}
                                <div class="timeline-media-caption">{{ block.settings.image_caption }}</div>
                              {% endif %}
                            </div>
                          {% endif %}
                          {% if block_title != blank %}
                            <h4 class="timeline-title">{{ block_title }}</h4>
                          {% endif %}
                          {% if block_content != blank %}
                            <div class="timeline-description">{{ block_content }}</div>
                          {% endif %}
                        </div>
                      </div>
                    {% when 'feature_list' %}
                      <div class="timeline-item" {{ block.shopify_attributes }}>
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                          {% if block.settings.list_title != blank %}
                            <h4 class="timeline-title">{{ block.settings.list_title }}</h4>
                          {% endif %}
                          {% if block.settings.list_items != blank %}
                            <ul class="timeline-features">
                              {% assign items = block.settings.list_items | split: '|' %}
                              {% for item in items %}
                                <li>{{ item | strip }}</li>
                              {% endfor %}
                            </ul>
                          {% endif %}
                        </div>
                      </div>
                  {% endcase %}
                {% endfor %}
              </div>
            {% else %}
              <div class="content-blocks" data-columns="{{ section.settings.blocks_per_row | default: 1 }}">
                {% for block in section.blocks %}
                  {% case block.type %}
                      {% when 'content_block','text_block' %}
                        {%- assign block_title = block.settings.block_title | default: block.settings.title | default: '' -%}
                        {%- assign block_content = block.settings.block_content | default: block.settings.content | default: '' -%}
                        {%- assign placement = block.settings.image_placement | default: 'text-only' -%}
                        <div class="content-block {% if placement == 'text-only' %}text-block{% endif %}" data-layout="{{ block.settings.image_placement }}" {{ block.shopify_attributes }}>
                          {%- comment -%} map image_size to numeric width for Shopify image_url {%- endcomment -%}
                          {% if block.settings.image_size == 'small' %}
                            {% assign __img_width = 300 %}
                          {% elsif block.settings.image_size == 'medium' %}
                            {% assign __img_width = 500 %}
                          {% elsif block.settings.image_size == 'large' %}
                            {% assign __img_width = 800 %}
                          {% elsif block.settings.image_size == 'full-width' %}
                            {% assign __img_width = 1600 %}
                          {% else %}
                            {% assign __img_width = 800 %}
                          {% endif %}
                          {%- comment -%} Image above / below / left / right / background / text-only handling {%- endcomment -%}
                          {% if placement == 'image-background' and block.settings.image != blank %}
                            {% assign __overlay_opacity = block.settings.overlay_opacity | default: 45 %}
                            <div class="content-block__background" style="background-image: url('{{ block.settings.image | image_url: width: __img_width }}'); border-radius: {{ block.settings.border_radius | default: 8 }}px;">
                              <div class="content-block__overlay" style="background: rgba(30,58,95, {{ __overlay_opacity | divided_by: 100.0 }});"></div>
                              <div class="content-block__inner">
                                <div class="content-block__text {% if placement == 'text-only' %}text-block{% endif %}">
                                  {% if block_title != blank %}
                                    <h4>{{ block_title }}</h4>
                                  {% endif %}
                                  {% if block_content != blank %}
                                    <div class="block-content">{{ block_content }}</div>
                                  {% endif %}
                                </div>
                              </div>
                            </div>
                          {% else %}
                            <div class="content-block__wrap content-block--{{ placement }}">
                              {% if placement == 'image-above-text' %}
                                {% if block.settings.image != blank or block.settings.video != blank or block.settings.media_type == 'video' %}
                                  {% render 'aai-media-block', block: block, img_width: __img_width, placement: placement %}
                                {% endif %}
                                <div class="content-block__text {% if placement == 'text-only' %}text-block{% endif %}">
                                  {% if block_title != blank %}
                                    <h4>{{ block_title }}</h4>
                                  {% endif %}
                                  {% if block_content != blank %}
                                    <div class="block-content">{{ block_content }}</div>
                                  {% endif %}
                                </div>
                              {% elsif placement == 'image-below-text' %}
                                <div class="content-block__text {% if placement == 'text-only' %}text-block{% endif %}">
                                  {% if block_title != blank %}
                                    <h4>{{ block_title }}</h4>
                                  {% endif %}
                                  {% if block_content != blank %}
                                    <div class="block-content">{{ block_content }}</div>
                                  {% endif %}
                                </div>
                                {% if block.settings.image != blank or block.settings.video != blank or block.settings.media_type == 'video' %}
                                  {% render 'aai-media-block', block: block, img_width: __img_width, placement: placement %}
                                {% endif %}
                              {% elsif placement == 'image-left-text-right' or placement == 'image-right-text-left' %}
                                {% if block.settings.image != blank or block.settings.video != blank or block.settings.media_type == 'video' %}
                                  {% render 'aai-media-block', block: block, img_width: __img_width, placement: placement %}
                                {% endif %}
                                <div class="content-block__text {% if placement == 'text-only' %}text-block{% endif %}">
                                  {% if block_title != blank %}
                                    <h4>{{ block_title }}</h4>
                                  {% endif %}
                                  {% if block_content != blank %}
                                    <div class="block-content">{{ block_content }}</div>
                                  {% endif %}
                                </div>
                              {% else %}
                                <div class="content-block__text {% if placement == 'text-only' %}text-block{% endif %}">
                                  {% if block_title != blank %}
                                    <h4>{{ block_title }}</h4>
                                  {% endif %}
                                  {% if block_content != blank %}
                                    <div class="block-content">{{ block_content }}</div>
                                  {% endif %}
                                </div>
                              {% endif %}
                            </div>
                          {% endif %}
                        </div>

                      
                    {% when 'feature_list' %}
                    <div class="feature-list" {{ block.shopify_attributes }}>
                      {% if block.settings.list_title != blank %}
                        <h4>{{ block.settings.list_title }}</h4>
                      {% endif %}
                      {% if block.settings.list_items != blank %}
                        <ul class="feature-items">
                          {% assign items = block.settings.list_items | split: '|' %}
                          {% for item in items %}
                            <li>{{ item | strip }}</li>
                          {% endfor %}
                        </ul>
                      {% endif %}
                    </div>
                    
                  {% when 'credential_grid' %}
                    <div class="credential-grid" {{ block.shopify_attributes }}>
                      {% if block.settings.grid_title != blank %}
                        <h4>{{ block.settings.grid_title }}</h4>
                      {% endif %}
                      <div class="credentials-container">
                        {% if block.settings.credential_1_title != blank %}
                          <div class="credential-item">
                            <strong>{{ block.settings.credential_1_title }}</strong>
                            {% if block.settings.credential_1_desc != blank %}
                              <p>{{ block.settings.credential_1_desc }}</p>
                            {% endif %}
                          </div>
                        {% endif %}
                        {% if block.settings.credential_2_title != blank %}
                          <div class="credential-item">
                            <strong>{{ block.settings.credential_2_title }}</strong>
                            {% if block.settings.credential_2_desc != blank %}
                              <p>{{ block.settings.credential_2_desc }}</p>
                            {% endif %}
                          </div>
                        {% endif %}
                        {% if block.settings.credential_3_title != blank %}
                          <div class="credential-item">
                            <strong>{{ block.settings.credential_3_title }}</strong>
                            {% if block.settings.credential_3_desc != blank %}
                              <p>{{ block.settings.credential_3_desc }}</p>
                            {% endif %}
                          </div>
                        {% endif %}
                      </div>
                    </div>
                    
                  {% when 'button_group' %}
                    <div class="button-group" {{ block.shopify_attributes }}>
                      {% if block.settings.button_1_text != blank %}
                        <a href="{{ block.settings.button_1_url }}" 
                           class="aai-btn aai-btn-{{ block.settings.button_1_style }} aai-btn-{{ block.settings.button_size }}">
                          {{ block.settings.button_1_text }}
                        </a>
                      {% endif %}
                      {% if block.settings.button_2_text != blank %}
                        <a href="{{ block.settings.button_2_url }}" 
                           class="aai-btn aai-btn-{{ block.settings.button_2_style }} aai-btn-{{ block.settings.button_size }}">
                          {{ block.settings.button_2_text }}
                        </a>
                      {% endif %}
                    </div>
                    
                  {% when 'contact_form' %}
                    <div class="contact-form-container" {{ block.shopify_attributes }}>
                      {% render 'contact-form', settings: block.settings %}
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
            {% endif %}
          {% endif %}
          
          {% if section.settings.main_button_text != blank %}
            <div class="content-cta">
              <a href="{{ section.settings.main_button_url }}" 
                 class="aai-btn aai-btn-{{ section.settings.main_button_style }} aai-btn-{{ section.settings.main_button_size }}">
                {{ section.settings.main_button_text }}
              </a>
            </div>
          {% endif %}
        </div>
      {% endif %}
      
      {% if section.settings.show_image and section.settings.content_image != blank %}
        <div class="content-image">
          <img src="{{ section.settings.content_image | image_url: width: 600 }}" 
               alt="{{ section.settings.content_image.alt | default: section.settings.section_title }}"
               loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</section>

