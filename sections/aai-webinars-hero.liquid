{% comment %}
  Section for the Hero banner of the Webinars page.
{% endcomment %}

<div class="webinars-hero">
  <div class="container">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.subtitle }}</p>
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="aai-btn aai-btn-primary">{{ section.settings.button_label }}</a>
    {% endif %}
    
    {%- comment -%} Render AI-generated theme blocks {%- endcomment -%}
    {% if section.blocks.size > 0 %}
      <div class="webinars-hero-blocks">
        {% for block in section.blocks %}
          <div class="webinars-hero-theme-block" {{ block.shopify_attributes }}>
            {% render block %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Webinars Hero",
  "category": "AAI Content",
  "tag": "section",
  "class": "webinars-hero-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Upcoming Webinars"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>Join our experts to learn more about industry best practices and new technologies.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View All Webinars"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Webinars Hero",
      "settings": {
        "title": "Explore Our Webinars",
        "subtitle": "<p>Stay updated with the latest trends and insights from AAI experts.</p>",
        "button_label": "Register Now"
      }
    }
  ],
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ]
}
{% endschema %}

