{% comment %}
COPILOT CONTEXT:
- Professional user dashboard for AAI LMS platform
- Must maintain professional authority aesthetic
- Industry credibility focus (course progress tracking)
- Brand colors: Authority Navy (#1e3a5f), Safety Orange (#ff6b35), Electric Blue (#3498db)
- Professional development progress and achievements
{% endcomment %}

<section class="aai-dashboard">
  <div class="aai-container">
    {% if customer %}
      <div class="dashboard-header">
        <h1 class="dashboard-title">Welcome back, {{ customer.first_name }}!</h1>
        <p class="dashboard-subtitle">Continue your professional development journey</p>
      </div>

      <div class="dashboard-grid">
        <!-- Progress Overview -->
        <div class="dashboard-card progress-overview">
          <h2 class="card-title">Your Progress</h2>
          <div class="progress-stats">
            <div class="stat-item">
              <div class="stat-number">{{ section.settings.completed_courses | default: '3' }}</div>
              <div class="stat-label">Courses Completed</div>
            </div>
            <div class="stat-item">
              <div class="stat-number">{{ section.settings.ceu_credits | default: '12' }}</div>
              <div class="stat-label">CEU Credits Earned</div>
            </div>
            <div class="stat-item">
              <div class="stat-number">{{ section.settings.certificates | default: '2' }}</div>
              <div class="stat-label">Certificates</div>
            </div>
          </div>
        </div>

        <!-- Current Courses -->
        <div class="dashboard-card current-courses">
          <h2 class="card-title">Continue Learning</h2>
          <div class="course-list">
            {% for block in section.blocks %}
              {% if block.type == 'current_course' %}
                <div class="course-progress-item">
                  <div class="course-info">
                    <h3 class="course-name">{{ block.settings.course_name }}</h3>
                    <p class="course-instructor">{{ block.settings.instructor }}</p>
                  </div>
                  <div class="progress-bar-container">
                    <div class="progress-bar">
                      <div class="progress-fill" style="width: {{ block.settings.progress_percentage | default: 65 }}%"></div>
                    </div>
                    <span class="progress-text">{{ block.settings.progress_percentage | default: 65 }}% Complete</span>
                  </div>
                  <a href="{{ block.settings.course_url }}" class="btn-continue">Continue</a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- Achievements -->
        <div class="dashboard-card achievements">
          <h2 class="card-title">Professional Achievements</h2>
          <div class="achievement-grid">
            <div class="achievement-badge earned">
              <div class="badge-icon">üéì</div>
              <span class="badge-name">Safety Specialist</span>
            </div>
            <div class="achievement-badge earned">
              <div class="badge-icon">‚≠ê</div>
              <span class="badge-name">First Course</span>
            </div>
            <div class="achievement-badge">
              <div class="badge-icon">üèÜ</div>
              <span class="badge-name">Expert Level</span>
            </div>
            <div class="achievement-badge">
              <div class="badge-icon">üìú</div>
              <span class="badge-name">Master Certification</span>
            </div>
          </div>
        </div>

        <!-- Recommended Courses -->
        <div class="dashboard-card recommendations">
          <h2 class="card-title">Recommended for You</h2>
          <div class="recommendation-list">
            {% for block in section.blocks %}
              {% if block.type == 'recommended_course' %}
                <div class="recommendation-item">
                  <div class="recommendation-image">
                    {% if block.settings.course_image %}
                      <img src="{{ block.settings.course_image | image_url: width: 80 }}" alt="{{ block.settings.course_name }}">
                    {% else %}
                      <div class="placeholder-image">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                          <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"/>
                        </svg>
                      </div>
                    {% endif %}
                  </div>
                  <div class="recommendation-content">
                    <h3 class="recommendation-title">{{ block.settings.course_name }}</h3>
                    <p class="recommendation-reason">{{ block.settings.recommendation_reason }}</p>
                    <div class="recommendation-meta">
                      <span class="ceu-credits">{{ block.settings.ceu_credits }} CEU</span>
                      <span class="course-price">${{ block.settings.price }}</span>
                    </div>
                  </div>
                  <a href="{{ block.settings.course_url }}" class="btn-enroll-small">Enroll</a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- Certificates -->
        <div class="dashboard-card certificates">
          <h2 class="card-title">Your Certificates</h2>
          <div class="certificate-list">
            {% for block in section.blocks %}
              {% if block.type == 'certificate' %}
                <div class="certificate-item">
                  <div class="certificate-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2Z"/>
                    </svg>
                  </div>
                  <div class="certificate-info">
                    <h3 class="certificate-name">{{ block.settings.certificate_name }}</h3>
                    <p class="certificate-date">Issued: {{ block.settings.issue_date }}</p>
                    <p class="certificate-id">ID: {{ block.settings.certificate_id }}</p>
                  </div>
                  <div class="certificate-actions">
                    <a href="{{ block.settings.download_url }}" class="btn-download">Download</a>
                    <a href="{{ block.settings.verify_url }}" class="btn-verify">Verify</a>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    {% else %}
      <div class="login-prompt">
        <h2>Access Your Professional Dashboard</h2>
        <p>Login to track your course progress, view certificates, and continue your professional development.</p>
        <a href="{{ routes.account_login_url }}" class="btn-login">Login to Your Account</a>
      </div>
    {% endif %}
  </div>
</section>

<style>
.aai-dashboard {
  padding: 40px 0;
  background: #f8fafc;
  min-height: 60vh;
}

.dashboard-header {
  text-align: center;
  margin-bottom: 40px;
}

.dashboard-title {
  font-size: 32px;
  font-weight: 700;
  color: #1e3a5f;
  margin-bottom: 8px;
}

.dashboard-subtitle {
  font-size: 18px;
  color: #6b7280;
}

.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 24px;
  margin-bottom: 40px;
}

.dashboard-card {
  background: white;
  border-radius: 12px;
  padding: 24px;
  box-shadow: 0 4px 12px rgba(30, 58, 95, 0.08);
  border: 1px solid #e5e7eb;
}

.card-title {
  font-size: 20px;
  font-weight: 600;
  color: #1e3a5f;
  margin-bottom: 20px;
}

/* Progress Overview */
.progress-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 32px;
  font-weight: 700;
  color: #ff6b35;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 14px;
  color: #6b7280;
}

/* Current Courses */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.course-progress-item {
  display: grid;
  grid-template-columns: 1fr auto;
  gap: 16px;
  align-items: center;
  padding: 16px;
  background: #f8fafc;
  border-radius: 8px;
}

.course-info h3 {
  font-size: 16px;
  font-weight: 600;
  color: #1e3a5f;
  margin-bottom: 4px;
}

.course-instructor {
  font-size: 14px;
  color: #6b7280;
}

.progress-bar-container {
  grid-column: 1 / -1;
  display: flex;
  align-items: center;
  gap: 12px;
}

.progress-bar {
  flex: 1;
  height: 8px;
  background: #e5e7eb;
  border-radius: 4px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #3498db;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 14px;
  color: #6b7280;
  white-space: nowrap;
}

.btn-continue {
  background: #3498db;
  color: white;
  padding: 8px 16px;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 500;
  font-size: 14px;
  transition: background 0.3s ease;
}

.btn-continue:hover {
  background: #2980b9;
}

/* Achievements */
.achievement-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
}

.achievement-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16px;
  border-radius: 8px;
  background: #f8fafc;
  opacity: 0.5;
  transition: opacity 0.3s ease;
}

.achievement-badge.earned {
  opacity: 1;
  background: linear-gradient(135deg, #ff6b35 0%, #f59e0b 100%);
  color: white;
}

.badge-icon {
  font-size: 24px;
  margin-bottom: 8px;
}

.badge-name {
  font-size: 12px;
  font-weight: 600;
  text-align: center;
}

/* Recommendations */
.recommendation-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.recommendation-item {
  display: grid;
  grid-template-columns: 80px 1fr auto;
  gap: 16px;
  align-items: center;
  padding: 16px;
  background: #f8fafc;
  border-radius: 8px;
}

.recommendation-image {
  width: 80px;
  height: 60px;
  border-radius: 6px;
  overflow: hidden;
}

.recommendation-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.placeholder-image {
  width: 100%;
  height: 100%;
  background: #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-image svg {
  width: 24px;
  height: 24px;
  color: #9ca3af;
}

.recommendation-title {
  font-size: 16px;
  font-weight: 600;
  color: #1e3a5f;
  margin-bottom: 4px;
}

.recommendation-reason {
  font-size: 14px;
  color: #6b7280;
  margin-bottom: 8px;
}

.recommendation-meta {
  display: flex;
  gap: 12px;
  font-size: 12px;
}

.ceu-credits {
  background: #ff6b35;
  color: white;
  padding: 2px 8px;
  border-radius: 4px;
  font-weight: 600;
}

.course-price {
  font-weight: 600;
  color: #1e3a5f;
}

.btn-enroll-small {
  background: #ff6b35;
  color: white;
  padding: 8px 16px;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 500;
  font-size: 14px;
  transition: background 0.3s ease;
}

.btn-enroll-small:hover {
  background: #e55a2b;
}

/* Certificates */
.certificate-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.certificate-item {
  display: grid;
  grid-template-columns: auto 1fr auto;
  gap: 16px;
  align-items: center;
  padding: 16px;
  background: #f8fafc;
  border-radius: 8px;
}

.certificate-icon {
  width: 40px;
  height: 40px;
  background: #3498db;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.certificate-icon svg {
  width: 24px;
  height: 24px;
  color: white;
}

.certificate-name {
  font-size: 16px;
  font-weight: 600;
  color: #1e3a5f;
  margin-bottom: 4px;
}

.certificate-date,
.certificate-id {
  font-size: 12px;
  color: #6b7280;
  margin-bottom: 2px;
}

.certificate-actions {
  display: flex;
  gap: 8px;
}

.btn-download,
.btn-verify {
  padding: 6px 12px;
  border-radius: 4px;
  text-decoration: none;
  font-size: 12px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-download {
  background: #3498db;
  color: white;
}

.btn-download:hover {
  background: #2980b9;
}

.btn-verify {
  background: transparent;
  color: #3498db;
  border: 1px solid #3498db;
}

.btn-verify:hover {
  background: #3498db;
  color: white;
}

/* Login Prompt */
.login-prompt {
  text-align: center;
  padding: 60px 20px;
}

.login-prompt h2 {
  font-size: 28px;
  font-weight: 600;
  color: #1e3a5f;
  margin-bottom: 16px;
}

.login-prompt p {
  font-size: 18px;
  color: #6b7280;
  margin-bottom: 32px;
}

.btn-login {
  background: #ff6b35;
  color: white;
  padding: 16px 32px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  font-size: 16px;
  transition: background 0.3s ease;
}

.btn-login:hover {
  background: #e55a2b;
}

@media (max-width: 768px) {
  .dashboard-grid {
    grid-template-columns: 1fr;
  }
  
  .progress-stats {
    grid-template-columns: 1fr;
  }
  
  .achievement-grid {
    grid-template-columns: 1fr;
  }
  
  .course-progress-item,
  .recommendation-item,
  .certificate-item {
    grid-template-columns: 1fr;
    gap: 12px;
  }
  
  .progress-bar-container {
    grid-column: 1;
  }
}
</style>

