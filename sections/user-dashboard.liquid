{% schema %}
{
  "name": "User Dashboard",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Dashboard Statistics"
    },
    {
      "type": "number",
      "id": "completed_courses",
      "label": "Completed Courses",
      "default": 3
    },
    {
      "type": "number",
      "id": "ceu_credits",
      "label": "CEU Credits Earned",
      "default": 12
    },
    {
      "type": "number",
      "id": "certificates",
      "label": "Certificates",
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "current_course",
      "name": "Current Course",
      "settings": [
        {
          "type": "text",
          "id": "course_name",
          "label": "Course Name",
          "default": "Advanced Safety Management"
        },
        {
          "type": "text",
          "id": "instructor",
          "label": "Instructor",
          "default": "Dr. Sarah Johnson"
        },
        {
          "type": "range",
          "id": "progress_percentage",
          "label": "Progress Percentage",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 65
        },
        {
          "type": "url",
          "id": "course_url",
          "label": "Course URL"
        }
      ]
    },
    {
      "type": "recommended_course",
      "name": "Recommended Course",
      "settings": [
        {
          "type": "text",
          "id": "course_name",
          "label": "Course Name",
          "default": "Water Park Safety Essentials"
        },
        {
          "type": "image_picker",
          "id": "course_image",
          "label": "Course Image"
        },
        {
          "type": "text",
          "id": "recommendation_reason",
          "label": "Recommendation Reason",
          "default": "Based on your recent completion of Safety Management"
        },
        {
          "type": "text",
          "id": "ceu_credits",
          "label": "CEU Credits",
          "default": "4"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "299"
        },
        {
          "type": "url",
          "id": "course_url",
          "label": "Course URL"
        }
      ]
    },
    {
      "type": "certificate",
      "name": "Certificate",
      "settings": [
        {
          "type": "text",
          "id": "certificate_name",
          "label": "Certificate Name",
          "default": "Safety Management Professional"
        },
        {
          "type": "text",
          "id": "issue_date",
          "label": "Issue Date",
          "default": "March 15, 2025"
        },
        {
          "type": "text",
          "id": "certificate_id",
          "label": "Certificate ID",
          "default": "AAI-SMP-2025-001"
        },
        {
          "type": "url",
          "id": "download_url",
          "label": "Download URL"
        },
        {
          "type": "url",
          "id": "verify_url",
          "label": "Verify URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "User Dashboard"
    }
  ]
}
{% endschema %}
