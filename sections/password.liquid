{% comment %}
  Password Section Content
  Works with the password layout that handles the form dialog
{% endcomment %}

<div class="password-section-content">
  <div class="password-message-container">
    {% if section.settings.heading != blank %}
      <h2 class="password-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.message != blank %}
      <div class="password-message">
        {{ section.settings.message }}
      </div>
    {% endif %}
    
    <div class="password-instructions">
      <p>Click the "Enter using password" button below to access the portal.</p>
    </div>
  </div>
</div>

<style>
  .password-section-content {
    text-align: center;
    padding: 40px 20px;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .password-heading {
    color: #1e3a5f;
    font-size: 2.5rem;
    margin-bottom: 20px;
    font-weight: 600;
  }
  
  .password-message {
    color: #444;
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 30px;
  }
  
  .password-instructions {
    background: #f8f9fa;
    border: 2px solid #3498db;
    border-radius: 8px;
    padding: 20px;
    margin-top: 30px;
  }
  
  .password-instructions p {
    color: #1e3a5f;
    font-weight: 500;
    margin: 0;
    font-size: 1.1rem;
  }
  
  @media (max-width: 768px) {
    .password-heading {
      font-size: 2rem;
    }
    
    .password-section-content {
      padding: 30px 15px;
    }
  }
</style>

{% schema %}
{
  "name": "Password Content",
  "tag": "section",
  "class": "password-section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Password Protected Store"
    },
    {
      "type": "richtext",
      "id": "message",
      "label": "Message",
      "default": "<p>This store is password protected. Please enter the password to continue browsing.</p>"
    }
  ]
}
{% endschema %}
