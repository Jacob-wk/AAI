{% comment %}
  Password Section with Form - Shopify 2.0 Best Practice
  Contains the actual password form following Shopify standards
{% endcomment %}

<div class="password-page section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="password-content">
      {% if section.settings.heading != blank %}
        <h1 class="password-title">{{ section.settings.heading }}</h1>
      {% endif %}
      
      {% if section.settings.message != blank %}
        <div class="password-description rte">
          {{ section.settings.message }}
        </div>
      {% endif %}
      
      <div class="password-form-wrapper">
        {% form 'storefront_password', class: 'password-form' %}
          <div class="field">
            <input
              type="password"
              name="password"
              id="Password"
              class="field__input"
              autocomplete="current-password"
              placeholder="Enter password"
              {%- if form.errors -%}
                aria-invalid="true"
                aria-describedby="PasswordLoginForm-password-error"
              {%- endif -%}
              required
              autofocus
            >
            <label class="field__label" for="Password">
              Password
            </label>
          </div>
          
          <button type="submit" name="commit" class="button button--full-width button--primary">
            {{ section.settings.button_text | default: "Enter Store" }}
          </button>
          
          {%- if form.errors -%}
            <div id="PasswordLoginForm-password-error" class="form__message form__message--error" role="status">
              <h2 class="form-status visually-hidden" tabindex="-1" autofocus>{{ 'accessibility.error' | t }}</h2>
              <span class="password-error">
                {{ 'general.password_page.login_form_error' | t }}
              </span>
            </div>
          {%- endif -%}
        {% endform %}
      </div>
    </div>
  </div>
</div>

<style>
  .password-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .password-page {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .password-content {
    max-width: 50rem;
    margin: 0 auto;
  }

  .password-title {
    margin-bottom: 2rem;
    color: rgb(var(--color-foreground));
    font-size: 3rem;
    line-height: 1.2;
  }

  .password-description {
    margin-bottom: 3rem;
    font-size: 1.6rem;
    line-height: 1.5;
    color: rgba(var(--color-foreground), 0.8);
  }

  .password-form-wrapper {
    max-width: 35rem;
    margin: 0 auto;
  }

  .password-form {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .password-form .field {
    position: relative;
    width: 100%;
  }

  .password-form .field__input {
    width: 100%;
    padding: 1.5rem;
    border: 0.2rem solid rgba(var(--color-foreground), 0.2);
    border-radius: 0.4rem;
    font-size: 1.6rem;
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
    transition: border-color 0.2s ease-in-out;
  }

  .password-form .field__input:focus {
    outline: 0;
    border-color: rgb(var(--color-button));
    box-shadow: 0 0 0 0.3rem rgba(var(--color-button), 0.2);
  }

  .password-form .field__label {
    position: absolute;
    left: 1.5rem;
    top: 1.5rem;
    font-size: 1.4rem;
    color: rgba(var(--color-foreground), 0.6);
    transition: all 0.2s ease-in-out;
    pointer-events: none;
    background-color: rgb(var(--color-background));
    padding: 0 0.5rem;
  }

  .password-form .field__input:focus + .field__label,
  .password-form .field__input:not(:placeholder-shown) + .field__label {
    top: -0.8rem;
    font-size: 1.2rem;
    color: rgb(var(--color-button));
  }

  .password-form .button {
    padding: 1.5rem 3rem;
    font-size: 1.6rem;
    font-weight: 600;
    border-radius: 0.4rem;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
  }

  .password-form .button--primary {
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    border: 0.2rem solid rgb(var(--color-button));
  }

  .password-form .button--primary:hover {
    background-color: rgba(var(--color-button), 0.9);
    transform: translateY(-0.1rem);
  }

  .password-error {
    color: rgb(var(--color-error));
    font-size: 1.4rem;
    margin-top: 1rem;
  }

  .form__message--error {
    margin-top: 1rem;
    padding: 1rem;
    border-radius: 0.4rem;
    background-color: rgba(var(--color-error), 0.1);
    border: 0.1rem solid rgba(var(--color-error), 0.3);
  }

  @media screen and (max-width: 749px) {
    .password-title {
      font-size: 2.4rem;
    }
    
    .password-description {
      font-size: 1.4rem;
    }
    
    .password-form .field__input,
    .password-form .button {
      font-size: 1.4rem;
    }
  }
</style>

{% schema %}
{
  "name": "Password page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Password Protected"
    },
    {
      "type": "richtext",
      "id": "message",
      "label": "Message",
      "default": "<p>Enter the password to access this store.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Enter"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ]
}
{% endschema %}
