{% comment %}
  Password Section with Form - Shopify 2.0 Best Practice
  Contains the actual password form following Shopify standards
{% endcomment %}

<div class="password-page section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="password-content">
      {% if section.settings.heading != blank %}
        <h1 class="password-title">{{ section.settings.heading }}</h1>
      {% endif %}
      
      {% if section.settings.message != blank %}
        <div class="password-description rte">
          {{ section.settings.message }}
        </div>
      {% endif %}
      
      <div class="password-form-wrapper">
        {% form 'storefront_password', class: 'password-form' %}
          <div class="field">
            <input
              type="password"
              name="password"
              id="Password"
              class="field__input"
              autocomplete="current-password"
              placeholder="Enter password"
              {%- if form.errors -%}
                aria-invalid="true"
                aria-describedby="PasswordLoginForm-password-error"
              {%- endif -%}
              required
              autofocus
            >
            <label class="field__label" for="Password">
              Password
            </label>
          </div>
          
          <button type="submit" name="commit" class="button button--full-width button--primary">
            {{ section.settings.button_text | default: "Enter Store" }}
          </button>
          
          {%- if form.errors -%}
            <div id="PasswordLoginForm-password-error" class="form__message form__message--error" role="status">
              <h2 class="form-status visually-hidden" tabindex="-1" autofocus>{{ 'accessibility.error' | t }}</h2>
              <span class="password-error">
                {{ 'general.password_page.login_form_error' | t }}
              </span>
            </div>
          {%- endif -%}
        {% endform %}
      </div>
    </div>
  </div>
</div>

<style>
  .password-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
    padding: 40px 20px;
  }

  .password-content {
    max-width: 500px;
    margin: 0 auto;
    width: 100%;
  }

  .password-title {
    margin-bottom: 20px;
    color: #1e3a5f;
    font-size: 2.5rem;
    line-height: 1.2;
    font-weight: 600;
  }

  .password-description {
    margin-bottom: 30px;
    font-size: 1.1rem;
    line-height: 1.5;
    color: #666;
  }

  .password-form-wrapper {
    max-width: 400px;
    margin: 0 auto;
  }

  .password-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .password-form .field {
    position: relative;
    width: 100%;
  }

  .password-form .field__input {
    width: 100%;
    padding: 15px;
    border: 2px solid #e1e5e9;
    border-radius: 6px;
    font-size: 16px;
    background-color: #ffffff;
    color: #333;
    transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }

  .password-form .field__input:focus {
    outline: 0;
    border-color: #3498db;
    box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
  }

  .password-form .field__input:focus + .field__label,
  .password-form .field__input:not(:placeholder-shown) + .field__label {
    top: -8px;
    font-size: 12px;
    color: #3498db;
    background-color: #ffffff;
  }

  .password-form .field__label {
    position: absolute;
    left: 15px;
    top: 15px;
    font-size: 14px;
    color: #999;
    transition: all 0.2s ease-in-out;
    pointer-events: none;
    background-color: #ffffff;
    padding: 0 5px;
  }

  .password-form .button {
    padding: 15px 30px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
    border: none;
    width: 100%;
  }

  .password-form .button--primary {
    background-color: #1e3a5f;
    color: #ffffff;
  }

  .password-form .button--primary:hover {
    background-color: #2c5aa0;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(30, 58, 95, 0.3);
  }

  .password-error {
    color: #dc3545;
    font-size: 14px;
    margin-top: 10px;
  }

  .form__message--error {
    margin-top: 15px;
    padding: 12px;
    border-radius: 6px;
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    color: #721c24;
  }

  .visually-hidden {
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    margin: -1px !important;
    overflow: hidden !important;
    clip: rect(0, 0, 0, 0) !important;
    white-space: nowrap !important;
    border: 0 !important;
  }

  /* Mobile responsiveness */
  @media screen and (max-width: 768px) {
    .password-title {
      font-size: 2rem;
    }
    
    .password-description {
      font-size: 1rem;
    }
    
    .password-page {
      padding: 30px 15px;
    }
    
    .password-form .field__input,
    .password-form .button {
      font-size: 14px;
      padding: 12px;
    }
  }

  /* Focus improvements for accessibility */
  .password-form .field__input:focus {
    outline: 2px solid #3498db;
    outline-offset: 2px;
  }

  .password-form .button:focus {
    outline: 2px solid #3498db;
    outline-offset: 2px;
  }
</style>

{% schema %}
{
  "name": "Password page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Password Protected"
    },
    {
      "type": "richtext",
      "id": "message",
      "label": "Message",
      "default": "<p>Enter the password to access this store.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Enter"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ]
}
{% endschema %}
