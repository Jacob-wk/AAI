{% comment %}
  Section: AAI Feature Focus
  Highlights key features or points with icons and text.
{% endcomment %}

{{ 'section-aai-feature-focus.css' | asset_url | stylesheet_tag }}

{% assign section_padding_class = 'section-padding-' | append: section.settings.section_padding %}
<div class="aai-feature-focus-section {% if section.settings.color_scheme %}color-{{ section.settings.color_scheme }}{% endif %} {% if section.settings.section_padding %}{{ section_padding_class }}{% endif %}">
  <div class="page-width">
    <div class="section-header">
      {% if section.settings.section_title != blank %}
        <h2 class="section-title">{{ section.settings.section_title | escape }}</h2>
      {% endif %}
      {% if section.settings.section_subtitle != blank %}
        <p class="section-subtitle">{{ section.settings.section_subtitle | escape }}</p>
      {% endif %}
    </div>

    <div class="feature-focus-grid">
      {% for block in section.blocks %}
        <div class="feature-item-wrapper" {{ block.shopify_attributes }}>
          {% case block.type %}
            {% when 'feature_item' %}
              <div class="feature-item">
                {% if block.settings.icon != blank %}
                  <div class="feature-icon">{{ block.settings.icon }}</div>
                {% endif %}
                {% if block.settings.title != blank %}
                  <h3 class="feature-title">{{ block.settings.title | escape }}</h3>
                {% endif %}
                {% if block.settings.description_html != blank %}
                  <div class="feature-description">{{ block.settings.description_html }}</div>
                {% endif %}
              </div>
            {% else %}
              {%- comment -%} Handle theme blocks generated by AI {%- endcomment -%}
              <div class="feature-theme-block">
                {% render block %}
              </div>
          {% endcase %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "⭐ AAI Feature Focus",
  "category": "aai_content",
  "settings": [
    {
      "type": "header",
      "content": "📝 Section Content"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "🎯 Section Title",
      "default": "Why Choose AAI?",
      "info": "Main heading that introduces your key features and benefits"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "📄 Section Subtitle",
      "default": "Professional safety education that sets the industry standard",
      "info": "Supporting text that reinforces your value proposition"
    },
    {
      "type": "header",
      "content": "🎨 Visual Design"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "🎨 Color Scheme",
      "options": [
        { "value": "color-scheme-1", "label": "🔵 Authority Navy" },
        { "value": "color-scheme-2", "label": "🟠 Safety Orange" },
        { "value": "color-scheme-background-1", "label": "⚪ Clean White" },
        { "value": "color-scheme-background-2", "label": "🔲 Light Gray" }
      ],
      "default": "color-scheme-background-2",
      "info": "Choose colors that match your section's importance and context"
    },
    {
      "type": "select",
      "id": "section_padding",
      "label": "📏 Section Spacing",
      "options": [
        { "value": "small", "label": "Small - Compact" },
        { "value": "medium", "label": "Medium - Balanced" },
        { "value": "large", "label": "Large - Spacious" },
        { "value": "extra-large", "label": "Extra Large - Hero" }
      ],
      "default": "large",
      "info": "Controls the vertical spacing around this section"
    }
  ],
  "blocks": [
    {
      "type": "feature_item",
      "name": "🏆 Feature Item",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "✨ Feature Icon",
          "default": "⭐",
          "info": "Use emojis (🛡️ 🎓 ✅) or simple text for visual appeal"
        },
        {
          "type": "text",
          "id": "title",
          "label": "🎯 Feature Title",
          "default": "Industry Leading Safety Training",
          "info": "Clear, benefit-focused headline for this feature"
        },
        {
          "type": "html",
          "id": "description_html",
          "label": "📝 Feature Description",
          "default": "<p>IAAPA certified and ASTM F24 compliant training programs designed by industry experts.</p>",
          "info": "Detailed explanation of the benefit - HTML formatting allowed"
        }
      ]
    },
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "⭐ AAI Feature Focus",
      "category": "aai_content",
      "blocks": [
        {
          "type": "feature_item",
          "settings": {
            "icon": "🛡️",
            "title": "Industry Leading Safety Training",
            "description_html": "<p>IAAPA certified and ASTM F24 compliant training programs designed by industry experts.</p>"
          }
        },
        {
          "type": "feature_item",
          "settings": {
            "icon": "🎓",
            "title": "Expert-Led Instruction",
            "description_html": "<p>Learn from certified professionals with decades of real-world amusement industry experience.</p>"
          }
        },
        {
          "type": "feature_item",
          "settings": {
            "icon": "📱",
            "title": "Mobile-Optimized Learning",
            "description_html": "<p>Access your courses anywhere, anytime on any device with our responsive learning platform.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
