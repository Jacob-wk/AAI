{% comment %}
  Help Center Categories Section
{% endcomment %}

{{ 'section-help-center.css' | asset_url | stylesheet_tag }}

<section class="help-categories {{ section.settings.background_style }}">
  <div class="aai-container">
    {% if section.settings.title != blank %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="categories-grid">
      {% for block in section.blocks %}
        <div class="category-card" {{ block.shopify_attributes }}>
          {% if block.settings.icon_svg != blank %}
            <div class="category-icon">{{ block.settings.icon_svg }}</div>
          {% endif %}
          <h3>{{ block.settings.category_title }}</h3>
          <p>{{ block.settings.category_description }}</p>
          {% if block.settings.category_link_url != blank and block.settings.category_link_text != blank %}
            <a href="{{ block.settings.category_link_url }}" class="category-link">{{ block.settings.category_link_text }}</a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Help Categories",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Browse by Category"
    },
    {
      "type": "select",
      "id": "background_style",
      "label": "Background Style",
      "options": [
        { "value": "section-alt-1", "label": "Alternative Background 1" },
        { "value": "section-alt-2", "label": "Alternative Background 2" },
        { "value": "section-dark", "label": "Dark Background" },
        { "value": "", "label": "Default" }
