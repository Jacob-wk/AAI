{% schema %}
{
  "name": "AAI Trust Indicators",
  "class": "aai-trust-indicators-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "checkbox",
      "id": "show_header",
      "label": "Show section header",
      "default": false
    },
    {
      "type": "text",
      "id": "header_title",
      "label": "Header title",
      "default": "Trusted by Industry Leaders"
    },
    {
      "type": "textarea",
      "id": "header_subtitle",
      "label": "Header subtitle",
      "default": "Join thousands of professionals who trust AAI for their safety education needs"
    },
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "background_video",
      "label": "Background video URL",
      "info": "Upload video to Files and paste the URL here. Recommended: MP4 format, under 10MB"
    },
    {
      "type": "checkbox",
      "id": "enable_parallax",
      "label": "Enable parallax effect",
      "default": false,
      "info": "Only applies to background images"
    },
    {
      "type": "header",
      "content": "Overlay Settings"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show background overlay",
      "default": false
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 50
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "select",
      "id": "grid_style",
      "label": "Grid layout",
      "options": [
        {
          "value": "auto-fit",
          "label": "Auto-fit"
        },
        {
          "value": "centered",
          "label": "Centered"
        }
      ],
      "default": "auto-fit"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Section padding top",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Section padding bottom",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "trust_stat",
      "name": "Trust Statistic",
      "settings": [
        {
          "type": "image_picker",
          "id": "stat_icon",
          "label": "Statistic icon (optional)"
        },
        {
          "type": "text",
          "id": "stat_number",
          "label": "Statistic number",
          "default": "10,000+"
        },
        {
          "type": "text",
          "id": "stat_label",
          "label": "Statistic label",
          "default": "Professionals Trained"
        },
        {
          "type": "textarea",
          "id": "stat_description",
          "label": "Description (optional)",
          "info": "Additional text below the statistic"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "AAI Trust Indicators",
      "blocks": [
        {
          "type": "trust_stat",
          "settings": {
            "stat_number": "10,000+",
            "stat_label": "FEC Professionals Trained"
          }
        },
        {
          "type": "trust_stat",
          "settings": {
            "stat_number": "800+",
            "stat_label": "FECs & Adventure Parks"
          }
        },
        {
          "type": "trust_stat",
          "settings": {
            "stat_number": "25+",
            "stat_label": "Years Experience"
          }
        },
        {
          "type": "trust_stat",
          "settings": {
            "stat_number": "100%",
            "stat_label": "Safety Focused"
          }
        }
      ]
    }
  ]
}
{% endschema %}