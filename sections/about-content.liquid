{% comment %}
  About Content Section - Customizable content blocks
{% endcomment %}

{{ 'section-about-content.css' | asset_url | stylesheet_tag }}

<section class="about-content page-section {{ section.settings.background_style }}">
  <div class="container">
    <div class="content-grid" data-layout="{{ section.settings.layout_style }}">
      <div class="content-text">
        {% if section.settings.section_title != blank %}
          <h2>{{ section.settings.section_title }}</h2>
        {% endif %}
        
        {% if section.settings.section_content != blank %}
          <div class="content-body">
            {{ section.settings.section_content }}
          </div>
        {% endif %}
        
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}" class="aai-btn-primary">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
      
      {% if section.settings.show_image and section.settings.content_image != blank %}
        <div class="content-image">
          <img src="{{ section.settings.content_image | image_url: width: 500 }}" 
               alt="{{ section.settings.content_image.alt | default: section.settings.section_title }}"
               loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
