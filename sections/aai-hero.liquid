{% comment %}
  AAI Hero Section
  - Features AAI branding and LMS-specific content
  - Hero content with features and call-to-action buttons
{% endcomment %}

{{ 'section-aai-hero.css' | asset_url | stylesheet_tag }}

<section class="aai-hero">
  <div class="aai-container">
    <div class="aai-hero-content">
      <div class="aai-hero-text">
        <h1 class="aai-hero-title">
          {{ section.settings.title | default: "Elevate Your FEC & Adventure Park Career" }}
        </h1>
        <p class="aai-hero-subtitle">
          {{ section.settings.subtitle | default: "Professional safety education designed specifically for Family Entertainment Centers and adventure park professionals. Advance your career while ensuring guest safety." }}
        </p>
        
        {% if section.settings.show_features %}
          <div class="aai-hero-features">
            <div class="aai-hero-feature">
              <div class="aai-check-icon">âœ“</div>
              <span>{{ section.settings.feature_1 | default: "IAAPA Accredited" }}</span>
            </div>
            <div class="aai-hero-feature">
              <div class="aai-check-icon">âœ“</div>
              <span>{{ section.settings.feature_2 | default: "Industry Experts" }}</span>
            </div>
            <div class="aai-hero-feature">
              <div class="aai-check-icon">âœ“</div>
              <span>{{ section.settings.feature_3 | default: "CEU Credits" }}</span>
            </div>
          </div>
        {% endif %}

        <div class="aai-hero-actions">
          {% if section.settings.primary_button_text != blank %}
            <a href="{{ section.settings.primary_button_url | default: '#courses' }}" class="aai-btn aai-btn-primary">
              {{ section.settings.primary_button_text }}
            </a>
          {% endif %}
          {% if section.settings.secondary_button_text != blank %}
            <a href="{{ section.settings.secondary_button_url | default: '#demo' }}" class="aai-btn aai-btn-secondary">
              {{ section.settings.secondary_button_text }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="aai-hero-visual">
        {% if section.settings.hero_image != blank %}
          <img
            src="{{ section.settings.hero_image | image_url: width: 600 }}"
            alt="{{ section.settings.hero_image.alt | default: 'AAI Safety Education' }}"
            width="600"
            height="{{ 600 | divided_by: section.settings.hero_image.aspect_ratio | round }}"
            loading="eager"
          >
        {% else %}
          <div class="aai-hero-placeholder">
            <div class="aai-hero-icon">ðŸŽ¢</div>
            <p>{{ section.settings.visual_text | default: "Safety First, Adventure Always" }}</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>



{% schema %}
{
  "name": "AAI Hero",
  "settings": [
    {
      "type": "header",
      "content": "Hero Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Where Safety Meets Adventure"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Professional safety education for the amusement industry. Advance your career while keeping guests safe."
    },
    {
      "type": "checkbox",
      "id": "show_features",
      "label": "Show feature list",
      "default": true
    },
    {
      "type": "text",
      "id": "feature_1",
      "label": "Feature 1",
      "default": "IAAPA Accredited"
    },
    {
      "type": "text",
      "id": "feature_2",
      "label": "Feature 2",
      "default": "Industry Experts"
    },
    {
      "type": "text",
      "id": "feature_3",
      "label": "Feature 3",
      "default": "CEU Credits"
    },
    {
      "type": "header",
      "content": "Hero Actions"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary button text",
      "default": "Explore Courses"
    },
    {
      "type": "url",
      "id": "primary_button_url",
      "label": "Primary button URL"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "Try Free Demo"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Secondary button URL"
    },
    {
      "type": "header",
      "content": "Hero Visual"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "visual_text",
      "label": "Placeholder text",
      "default": "Safety First, Adventure Always"
    }
  ],
  "presets": [
    {
      "name": "AAI Hero",
      "settings": {
        "title": "Elevate Your FEC & Adventure Park Career",
        "subtitle": "Professional safety education designed specifically for Family Entertainment Centers and adventure park professionals. Advance your career while ensuring guest safety.",
        "show_features": true,
        "feature_1": "IAAPA Accredited",
        "feature_2": "Industry Experts",
        "feature_3": "CEU Credits",
        "primary_button_text": "Explore Courses",
        "primary_button_url": "/collections/courses",
        "secondary_button_text": "Try Free Demo",
        "secondary_button_url": "/pages/safety-library",
        "visual_text": "Safety First, Adventure Always"
      }
    }
  ]
}
{% endschema %}
