{% comment %}
  AAI Professional Footer
  - Comprehensive footer with links, contact info, and compliance
  - Customizable through theme settings
{% endcomment %}

{{ 'section-aai-footer.css' | asset_url | stylesheet_tag }}

<footer class="aai-footer">
  <div class="aai-container">
    <div class="aai-footer-main">
      <div class="aai-footer-column aai-footer-about">
        <div class="aai-footer-logo" style="--footer-logo-width: {{ section.settings.footer_logo_width }}px;">
          {% if section.settings.footer_logo != blank %}
            <img src="{{ section.settings.footer_logo | image_url: width: section.settings.footer_logo_width }}" 
                 alt="{{ shop.name }}" 
                 width="{{ section.settings.footer_logo_width }}" 
                 loading="lazy">
          {% elsif settings.logo != blank %}
            <img src="{{ settings.logo | image_url: width: section.settings.footer_logo_width }}" 
                 alt="{{ shop.name }}" 
                 width="{{ section.settings.footer_logo_width }}" 
                 loading="lazy">
          {% else %}
            <h3>{{ shop.name }}</h3>
          {% endif %}
        </div>
        <p class="aai-footer-description">
          {{ section.settings.footer_description | default: "Professional safety education for the amusement industry since 2025. Advance your career while keeping guests safe." }}
        </p>
      </div>

      <div class="aai-footer-column">
        <h4>{{ section.settings.menu_1_title | default: "Education" }}</h4>
        <ul class="aai-footer-links">
          {% if section.settings.footer_menu_1 != blank %}
            {% for link in linklists[section.settings.footer_menu_1].links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          {% else %}
            <li><a href="/collections/courses">All Courses</a></li>
            <li><a href="/pages/corporate-training">Corporate Training</a></li>
            <li><a href="/pages/instructors">Our Faculty</a></li>
          {% endif %}
          <li><a href="{{ section.settings.courses_in_development_url | default: '/pages/courses-in-development' }}">Courses in Development</a></li>
        </ul>
        
        <h4 style="margin-top: 24px;">{{ section.settings.join_aai_title | default: "Join AAI" }}</h4>
        <ul class="aai-footer-links">
          {% if section.settings.footer_menu_join_aai != blank %}
            {% for link in linklists[section.settings.footer_menu_join_aai].links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          {% else %}
            <li><a href="/account/register">Become a Member</a></li>
            <li><a href="/pages/instructor-application">Become an Instructor</a></li>
            <li><a href="/pages/partnerships">Partner with Us</a></li>
          {% endif %}
        </ul>
      </div>

      <div class="aai-footer-column">
        <h4>{{ section.settings.company_title | default: "Company" }}</h4>
        <ul class="aai-footer-links">
          {% if section.settings.footer_menu_company != blank %}
            {% for link in linklists[section.settings.footer_menu_company].links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          {% else %}
            <li><a href="/pages/about">About AAI</a></li>
            <li><a href="/pages/contact">Contact Us</a></li>
            <li><a href="/pages/help-center">Help Center</a></li>
          {% endif %}
        </ul>
        
        <div class="aai-footer-contact" style="margin-top: 24px;">
          {% if section.settings.address != blank %}
            <div class="aai-contact-item">
              <span class="aai-contact-icon">üìç</span>
              <span>{{ section.settings.address }}</span>
            </div>
          {% endif %}
          {% if section.settings.email != blank %}
            <div class="aai-contact-item">
              <span class="aai-contact-icon">‚úâÔ∏è</span>
              <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
            </div>
          {% endif %}
          {% if section.settings.phone != blank %}
            <div class="aai-contact-item">
              <span class="aai-contact-icon">üìû</span>
              <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
            </div>
          {% endif %}
        </div>
        
        {% if section.settings.show_nonprofit_statement %}
          <p class="aai-nonprofit-statement" style="margin-top: 16px; color: rgba(255, 255, 255, 0.8); font-size: 0.9rem;">
            {{ section.settings.nonprofit_statement | default: "AAI is a 501(c)(3) nonprofit organization dedicated to advancing safety education in the amusement industry." }}
          </p>
        {% endif %}
      </div>
    </div>

    <div class="aai-footer-certifications">
      <div class="aai-cert-badges">
        {% if section.settings.show_iaapa_badge %}
          <div class="aai-cert-badge">
            <span>{{ section.settings.iaapa_badge_text | default: 'IAAPA Accredited' }}</span>
          </div>
        {% endif %}
        {% if section.settings.show_iso_badge %}
          <div class="aai-cert-badge">
            <span>{{ section.settings.iso_badge_text | default: 'ISO 9001 Certified' }}</span>
          </div>
        {% endif %}
        {% if section.settings.show_ceu_badge %}
          <div class="aai-cert-badge">
            <span>{{ section.settings.ceu_badge_text | default: 'CEU Provider' }}</span>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="aai-footer-bottom">
      <div class="aai-footer-legal">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
        <div class="aai-legal-links">
          <a href="/pages/privacy-policy">Privacy Policy</a>
          <a href="/pages/terms-of-service">Terms of Service</a>
        </div>
      </div>
      <div class="aai-footer-social">
        {% if section.settings.social_linkedin != blank %}
          <a href="{{ section.settings.social_linkedin }}" target="_blank" rel="noopener">LinkedIn</a>
        {% endif %}
        {% if section.settings.social_twitter != blank %}
          <a href="{{ section.settings.social_twitter }}" target="_blank" rel="noopener">Twitter</a>
        {% endif %}
        {% if section.settings.social_youtube != blank %}
          <a href="{{ section.settings.social_youtube }}" target="_blank" rel="noopener">YouTube</a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "AAI Footer",
  "settings": [
    {
      "type": "header",
      "content": "Footer Logo"
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo",
      "info": "Upload a logo for the footer. If not set, the main site logo will be used."
    },
    {
      "type": "range",
      "id": "footer_logo_width",
      "label": "Footer Logo Width",
      "min": 80,
      "max": 250,
      "step": 10,
      "default": 150,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "footer_description",
      "label": "Footer Description",
      "default": "Professional safety education for the amusement industry since 2025. Advance your career while keeping guests safe."
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "123 Safety Blvd, Orlando, FL 32819"
    },
    {
      "type": "checkbox",
      "id": "show_nonprofit_statement",
      "label": "Show 501(c)(3) Statement",
      "default": true
    },
    {
      "type": "textarea",
      "id": "nonprofit_statement",
      "label": "Nonprofit Statement",
      "default": "AAI is a 501(c)(3) nonprofit organization dedicated to advancing safety education in the amusement industry."
    },
    {
      "type": "text",
      "id": "support_hours",
      "label": "Support Hours",
      "default": "Mon-Fri 8AM-6PM EST"
    },
    {
      "type": "header",
      "content": "Menu Titles"
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Education Menu Title",
      "default": "Education"
    },
    {
      "type": "text",
      "id": "join_aai_title",
      "label": "Join AAI Menu Title",
      "default": "Join AAI"
    },
    {
      "type": "text",
      "id": "company_title",
      "label": "Company Menu Title", 
      "default": "Company"
    },
    {
      "type": "header",
      "content": "Footer Navigation Links"
    },
    {
      "type": "link_list",
      "id": "footer_menu_1",
      "label": "Education Menu Links",
      "info": "Select a menu to display under the Education column"
    },
    {
      "type": "url",
      "id": "courses_in_development_url",
      "label": "Courses in Development URL",
      "default": "/pages/courses-in-development"
    },
    {
      "type": "link_list",
      "id": "footer_menu_join_aai",
      "label": "Join AAI Menu Links",
      "info": "Select a menu to display under the Join AAI section"
    },
    {
      "type": "link_list",
      "id": "footer_menu_company", 
      "label": "Company Menu Links",
      "info": "Select a menu to display under the Company column"
    },
    {
      "type": "header",
      "content": "Certifications"
    },
    {
      "type": "checkbox",
      "id": "show_iaapa_badge",
      "label": "Show Badge 1",
      "default": true
    },
    {
      "type": "text",
      "id": "iaapa_badge_text",
      "label": "Badge 1 text",
      "default": "IAAPA Accredited"
    },
    {
      "type": "checkbox",
      "id": "show_iso_badge",
      "label": "Show Badge 2",
      "default": true
    },
    {
      "type": "text",
      "id": "iso_badge_text",
      "label": "Badge 2 text",
      "default": "ISO 9001 Certified"
    },
    {
      "type": "checkbox",
      "id": "show_ceu_badge",
      "label": "Show Badge 3",
      "default": true
    },
    {
      "type": "text",
      "id": "ceu_badge_text",
      "label": "Badge 3 text",
      "default": "CEU Provider"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "url",
      "id": "social_linkedin",
      "label": "LinkedIn URL"
    },
    {
      "type": "url",
      "id": "social_twitter",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "social_youtube",
      "label": "YouTube URL"
    }
  ],
  "presets": [
    {
      "name": "AAI Footer"
    }
  ]
}
{% endschema %}
