{% comment %}
COPILOT CONTEXT:
- Professional course card exactly matching aai-lms-mockup.html design
- Uses Shopify product data but styled for professional education
- Industry authority aesthetic with safety credentials prominent
- Color scheme: Authority Navy (#1e3a5f), Safety Orange (#ff6b35), Electric Blue (#3498db)
- Professional development focus (not casual e-commerce)
{% endcomment %}

{% assign product = product %}
{% assign course_duration = product.metafields.aai.course_duration | default: '24 Hours' %}
{% assign course_level = product.metafields.aai.course_level | default: 'Intermediate' %}
{% assign ceu_credits = product.metafields.aai.ceu_credits | default: '4' %}
{% assign course_icon = product.metafields.aai.course_icon | default: 'ðŸŽ“' %}
{% assign prerequisites = product.metafields.aai.prerequisites %}
{% assign certification_type = product.metafields.aai.certification_type | default: 'Certificate' %}
{% assign course_category = product.metafields.aai.course_category | default: 'safety' %}
{% assign course_outcome = product.metafields.aai.course_outcome | default: product.description | truncate: 120 %}
{% assign course_status = product.metafields.aai.course_status | default: 'Updated 2025' %}

<div class="course-card" data-category="{{ course_category }}">
  <div class="course-header">
    {{ course_icon }}
    <div class="course-badges">
      {% if ceu_credits and ceu_credits != blank %}
        <span class="ceu-credits">{{ ceu_credits }} CEU Credits</span>
      {% endif %}
      {% if certification_type and certification_type != blank %}
        <span class="certification">{{ certification_type }}</span>
      {% endif %}
    </div>
  </div>
  
  <div class="course-content">
    <h3>{{ product.title }}</h3>
    <p class="course-outcome">{{ course_outcome }}</p>
    
    <div class="course-meta">
      <span>{{ course_duration }}</span>
      <span>{{ course_level }}</span>
      <span>{{ course_status }}</span>
    </div>
    
    {% if prerequisites and prerequisites != blank %}
      <div class="prerequisites">
        <small><strong>Prerequisites:</strong> {{ prerequisites }}</small>
      </div>
    {% endif %}
    
    <div class="course-price">
      {% if product.compare_at_price > product.price %}
        <div class="price-container">
          <span class="price-original">${{ product.compare_at_price | money_without_currency }}</span>
          <span class="price">${{ product.price | money_without_currency }}</span>
        </div>
      {% else %}
        <span class="price">${{ product.price | money_without_currency }}</span>
      {% endif %}
      
      <a href="{{ product.url }}" class="enroll-btn" data-product-id="{{ product.id }}">
        {% if product.available %}
          Enroll Now
        {% else %}
          Sold Out
        {% endif %}
      </a>
    </div>
  </div>
</div>

<style>
  /* Course Card Styles - Exact match to mockup */
  .course-card {
    background: white;
    border: 1px solid var(--light-grey);
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .course-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.12);
  }

  .course-header {
    position: relative;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    color: rgba(30, 58, 95, 0.2);
  }

  .course-badges {
    position: absolute;
    top: 15px;
    right: 15px;
    display: flex;
    gap: 8px;
  }

  .ceu-credits {
    background: var(--electric-blue);
    color: white;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .certification {
    background: var(--safety-orange);
    color: white;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .course-content {
    padding: 25px;
  }

  .course-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--authority-navy);
    margin-bottom: 12px;
  }

  .course-outcome {
    color: var(--charcoal-grey);
    margin-bottom: 20px;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .course-meta {
    display: flex;
    gap: 20px;
    margin-bottom: 20px;
    font-size: 0.875rem;
    color: var(--medium-grey);
    flex-wrap: wrap;
  }

  .course-meta span {
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .course-meta span::before {
    content: 'â€¢';
    color: var(--electric-blue);
    font-weight: bold;
  }

  .course-meta span:first-child::before {
    content: none;
  }

  .prerequisites {
    background: var(--light-grey);
    padding: 10px 15px;
    border-radius: 4px;
    margin-bottom: 20px;
    font-size: 0.875rem;
    color: var(--dark-grey);
  }

  .course-price {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20px;
    border-top: 1px solid var(--light-grey);
  }

  .price-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .price-original {
    font-size: 1rem;
    color: var(--medium-grey);
    text-decoration: line-through;
    margin-bottom: 2px;
  }

  .price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--authority-navy);
  }

  .enroll-btn {
    background: var(--authority-navy);
    color: white;
    padding: 10px 24px;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .enroll-btn:hover {
    background: #15304e;
    transform: translateX(2px);
    color: white;
    text-decoration: none;
  }

  .enroll-btn:disabled,
  .enroll-btn[disabled] {
    background: var(--medium-grey);
    cursor: not-allowed;
    transform: none;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .course-meta {
      gap: 10px;
    }
    
    .course-meta span {
      font-size: 0.8rem;
    }
    
    .course-price {
      flex-direction: column;
      gap: 15px;
      align-items: stretch;
    }
    
    .enroll-btn {
      text-align: center;
    }
  }
</style>
