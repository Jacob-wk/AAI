{% comment %}
COPILOT CONTEXT:
- Professional progress tracker component matching aai-lms-mockup.html design
- Shows course completion progress with professional styling
- Integrates with Shopify customer metafields for progress data
- Color scheme: Authority Navy (#1e3a5f), Safety Orange (#ff6b35), Electric Blue (#3498db)
{% endcomment %}

{% assign customer = customer %}
{% assign product_id = product_id %}
{% assign progress = customer.metafields.aai.course_progress[product_id] | default: 0 %}
{% assign completion_date = customer.metafields.aai.completion_dates[product_id] %}
{% assign current_module = customer.metafields.aai.current_modules[product_id] | default: 1 %}
{% assign total_modules = product.metafields.aai.total_modules | default: 8 %}
{% assign time_spent = customer.metafields.aai.time_spent[product_id] | default: 0 %}
{% assign estimated_remaining = product.metafields.aai.estimated_hours | default: 40 | minus: time_spent %}

<div class="aai-progress-tracker" data-product-id="{{ product_id }}">
  <div class="aai-progress-header">
    <div class="aai-progress-info">
      <h4 class="aai-progress-title">{{ product.title }}</h4>
      <p class="aai-progress-meta">
        {% if completion_date %}
          Completed on {{ completion_date | date: '%B %d, %Y' }}
        {% else %}
          Module {{ current_module }} of {{ total_modules }} • {{ time_spent }} hours completed
        {% endif %}
      </p>
    </div>
    <div class="aai-progress-percentage">
      <span class="aai-progress-number">{{ progress }}%</span>
      {% if completion_date %}
        <span class="aai-completion-checkmark">✓</span>
      {% endif %}
    </div>
  </div>

  <div class="aai-progress-bar-container">
    <div class="aai-progress-bar">
      <div class="aai-progress-fill" 
           style="width: {{ progress }}%; {% if completion_date %}background: var(--success-green);{% endif %}"
           data-progress="{{ progress }}">
      </div>
    </div>
    <div class="aai-progress-markers">
      {% for i in (1..total_modules) %}
        <div class="aai-progress-marker {% if i <= current_module %}completed{% endif %}" 
             style="left: {{ i | times: 100 | divided_by: total_modules | minus: 6.25 }}%">
          <span class="aai-marker-number">{{ i }}</span>
          <span class="aai-marker-label">Module {{ i }}</span>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="aai-progress-details">
    {% if completion_date %}
      <div class="aai-progress-detail">
        <span class="aai-detail-label">Status:</span>
        <span class="aai-detail-value aai-completed">Course Completed</span>
      </div>
      <div class="aai-progress-detail">
        <span class="aai-detail-label">CEU Credits Earned:</span>
        <span class="aai-detail-value">{{ product.metafields.aai.ceu_credits | default: '4' }} Credits</span>
      </div>
    {% else %}
      <div class="aai-progress-detail">
        <span class="aai-detail-label">Time Remaining:</span>
        <span class="aai-detail-value">Approximately {{ estimated_remaining }} hours</span>
      </div>
      <div class="aai-progress-detail">
        <span class="aai-detail-label">Next Milestone:</span>
        <span class="aai-detail-value">Module {{ current_module | plus: 1 }} - {{ product.metafields.aai.module_titles[current_module] | default: 'Next Section' }}</span>
      </div>
    {% endif %}
  </div>

  <div class="aai-progress-actions">
    {% if completion_date %}
      <a href="{{ product.metafields.aai.certificate_url | default: '#' }}" class="aai-progress-btn aai-btn-certificate">
        Download Certificate
      </a>
      <a href="{{ product.metafields.aai.intuto_url | default: '#' }}" class="aai-progress-btn aai-btn-secondary">
        Review Course
      </a>
    {% else %}
      <a href="{{ product.metafields.aai.intuto_url | default: '#' }}" class="aai-progress-btn aai-btn-primary">
        Continue Learning
      </a>
      {% if progress > 0 %}
        <button class="aai-progress-btn aai-btn-secondary" onclick="showProgressDetails({{ product_id }})">
          View Details
        </button>
      {% endif %}
    {% endif %}
  </div>
</div>

<style>
  /* Professional Progress Tracker Styles */
  .aai-progress-tracker {
    background: white;
    border: 1px solid var(--light-grey);
    border-radius: 8px;
    padding: 25px;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
  }

  .aai-progress-tracker:hover {
    border-color: var(--electric-blue);
    box-shadow: 0 4px 16px rgba(52, 152, 219, 0.1);
  }

  .aai-progress-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20px;
  }

  .aai-progress-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--authority-navy);
    margin-bottom: 5px;
  }

  .aai-progress-meta {
    font-size: 0.875rem;
    color: var(--medium-grey);
    margin: 0;
  }

  .aai-progress-percentage {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .aai-progress-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--electric-blue);
  }

  .aai-completion-checkmark {
    font-size: 1.25rem;
    color: var(--success-green);
  }

  .aai-progress-bar-container {
    position: relative;
    margin-bottom: 25px;
  }

  .aai-progress-bar {
    background: var(--light-grey);
    height: 12px;
    border-radius: 6px;
    overflow: hidden;
    margin-bottom: 15px;
  }

  .aai-progress-fill {
    background: var(--electric-blue);
    height: 100%;
    border-radius: 6px;
    transition: width 0.5s ease;
    position: relative;
  }

  .aai-progress-fill::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    width: 3px;
    background: rgba(255,255,255,0.3);
    border-radius: 6px;
  }

  .aai-progress-markers {
    position: relative;
    height: 25px;
  }

  .aai-progress-marker {
    position: absolute;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 0.75rem;
  }

  .aai-marker-number {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: var(--light-grey);
    color: var(--medium-grey);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    margin-bottom: 3px;
    transition: all 0.3s ease;
  }

  .aai-progress-marker.completed .aai-marker-number {
    background: var(--electric-blue);
    color: white;
  }

  .aai-marker-label {
    color: var(--medium-grey);
    white-space: nowrap;
  }

  .aai-progress-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    margin-bottom: 20px;
    padding: 15px;
    background: var(--light-grey);
    border-radius: 6px;
  }

  .aai-progress-detail {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .aai-detail-label {
    font-size: 0.8rem;
    color: var(--medium-grey);
    font-weight: 500;
  }

  .aai-detail-value {
    font-size: 0.9rem;
    color: var(--charcoal-grey);
    font-weight: 600;
  }

  .aai-detail-value.aai-completed {
    color: var(--success-green);
  }

  .aai-progress-actions {
    display: flex;
    gap: 15px;
  }

  .aai-progress-btn {
    padding: 10px 20px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .aai-progress-btn.aai-btn-primary {
    background: var(--electric-blue);
    color: white;
  }

  .aai-progress-btn.aai-btn-primary:hover {
    background: #2980b9;
    color: white;
    text-decoration: none;
  }

  .aai-progress-btn.aai-btn-certificate {
    background: var(--success-green);
    color: white;
  }

  .aai-progress-btn.aai-btn-certificate:hover {
    background: #229954;
    color: white;
    text-decoration: none;
  }

  .aai-progress-btn.aai-btn-secondary {
    background: transparent;
    color: var(--authority-navy);
    border: 1px solid var(--authority-navy);
  }

  .aai-progress-btn.aai-btn-secondary:hover {
    background: var(--authority-navy);
    color: white;
    text-decoration: none;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .aai-progress-header {
      flex-direction: column;
      gap: 10px;
    }
    
    .aai-progress-details {
      grid-template-columns: 1fr;
    }
    
    .aai-progress-actions {
      flex-direction: column;
    }
    
    .aai-progress-marker {
      font-size: 0.65rem;
    }
    
    .aai-marker-number {
      width: 16px;
      height: 16px;
      font-size: 0.7rem;
    }
  }
</style>

<script>
  function showProgressDetails(productId) {
    // Function to show detailed progress modal or expanded view
    // This would integrate with the AAI core JavaScript
    if (window.AAI && window.AAI.showProgressModal) {
      window.AAI.showProgressModal(productId);
    } else {
      alert('Progress details would show detailed module breakdown and time tracking.');
    }
  }
</script>
