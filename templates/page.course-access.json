{
  "name": "Course Access Page",
  "sections": {
    "hero": {
      "type": "aai-universal-hero",
      "settings": {
        "hero_title": "{{ page.title | default: 'Course Access' }}",
        "hero_subtitle": "Continue your professional development journey",
        "background_style": "bg-light"
      }
    },
    "course_player_section": {
      "type": "aai-universal-content",
      "settings": {
        "layout_style": "two-column-sidebar-right",
        "background_style": "bg-light",
        "content_width": "container-fluid"
      },
      "blocks": {
        "intuto_player_wrapper": {
          "type": "custom_liquid_block",
          "settings": {
            "custom_liquid": "{% render 'intuto-player', course_id: page.metafields.intuto.course_id, embed_url: page.metafields.intuto.embed_url, customer: customer, course_title: page.title %}"
          }
        },
        "course_sidebar": {
          "type": "custom_liquid_block",
          "settings": {
            "custom_liquid": "<aside class=\"course-sidebar\">\n  <div class=\"progress-card\">\n    <h3>Your Progress</h3>\n    <div class=\"progress-bar\">\n      <div class=\"progress-fill\" style=\"width: {{ customer.metafields.intuto.progress | default: 0 }}%\"></div>\n    </div>\n    <p class=\"progress-text\">{{ customer.metafields.intuto.progress | default: 0 }}% Complete</p>\n  </div>\n  {% if page.metafields.course.resources %}\n    <div class=\"resources-card\">\n      <h3>Course Resources</h3>\n      <ul class=\"resources-list\">\n        {% assign resources = page.metafields.course.resources | split: ',' %}\n        {% for resource in resources %}\n          <li><a href=\"{{ resource | strip }}\" target=\"_blank\" rel=\"noopener\">{{ resource | strip | split: '/' | last }}</a></li>\n        {% endfor %}\n      </ul>\n    </div>\n  {% endif %}\n  <div class=\"support-card\">\n    <h3>Need Help?</h3>\n    <p>Contact our support team for technical assistance.</p>\n    <a href=\"/pages/contact\" class=\"aai-btn aai-btn-secondary\">Get Support</a>\n  </div>\n</aside>"
          }
        }
      },
      "block_order": [
        "intuto_player_wrapper",
        "course_sidebar"
      ]
    },
    "navigation": {
      "type": "aai-universal-content",
      "settings": {
        "layout_style": "single-column",
        "background_style": "bg-light"
      },
      "blocks": {
        "nav_links": {
          "type": "text_block",
          "settings": {
            "content": "<div class='course-navigation'><div class='nav-item'><a href='/account' class='aai-btn aai-btn-outline'>‚Üê Back to Dashboard</a></div><div class='nav-item'><a href='/collections/courses' class='aai-btn aai-btn-outline'>Browse More Courses</a></div></div>"
          }
        }
      },
      "block_order": [
        "nav_links"
      ]
    },
    "support": {
      "type": "aai-universal-content",
      "settings": {
        "layout_style": "single-column",
        "background_style": "bg-primary"
      },
      "blocks": {
        "support_info": {
          "type": "text_block",
          "settings": {
            "title": "Need Help?",
            "content": "<p>If you experience any technical issues with the course player, please contact our support team.</p><a href='/pages/help-center' class='aai-btn aai-btn-primary'>Get Support</a>"
          }
        }
      },
      "block_order": [
        "support_info"
      ]
    }
  },
  "order": [
    "hero",
    "course_player_section",
    "navigation",
    "support"
  ]
}
