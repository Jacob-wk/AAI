{% comment %}
  Course Product Template with Embedded Intuto Preview
  Enhanced product page for professional education courses
{% endcomment %}

<div class="course-product-page">
  {% render 'aai-header' %}
  
  <div class="product-container">
    <div class="aai-container">
      <nav class="breadcrumb" aria-label="Product navigation">
        <a href="{{ routes.root_url }}" class="breadcrumb__link">Home</a>
        <span class="breadcrumb__separator">›</span>
        <a href="{{ collections.courses.url }}" class="breadcrumb__link">Courses</a>
        <span class="breadcrumb__separator">›</span>
        <span class="breadcrumb__current">{{ product.title }}</span>
      </nav>

      <div class="product-grid">
        <div class="product-media">
          <div class="product-image-main">
            {% if product.featured_media %}
              <img src="{{ product.featured_media | img_url: '600x400' }}" 
                   alt="{{ product.featured_media.alt | default: product.title }}"
                   class="product-image">
            {% else %}
              <div class="product-placeholder">
                <div class="placeholder-content">
                  {% render 'icon-search' %}
                  <span>Course Preview</span>
                </div>
              </div>
            {% endif %}
          </div>
          
          {% comment %} Course Preview Video/Demo if available {% endcomment %}
          {% if product.metafields.course.preview_video %}
            <div class="course-preview">
              <h3>Course Preview</h3>
              <div class="video-wrapper">
                <iframe 
                  src="{{ product.metafields.course.preview_video }}"
                  frameborder="0"
                  allowfullscreen
                  class="preview-video"
                  title="Course Preview - {{ product.title }}">
                </iframe>
              </div>
            </div>
          {% endif %}
        </div>

        <div class="product-info">
          <div class="product-header">
            <h1 class="product-title">{{ product.title }}</h1>
            
            <div class="course-badges">
              {% if product.metafields.course.ceu_credits %}
                <span class="badge badge--ceu">{{ product.metafields.course.ceu_credits }} CEU Credits</span>
              {% endif %}
              
              {% if product.metafields.course.certification %}
                <span class="badge badge--cert">{{ product.metafields.course.certification }}</span>
              {% endif %}
              
              {% if product.metafields.course.level %}
                <span class="badge badge--level">{{ product.metafields.course.level }}</span>
              {% endif %}
            </div>
          </div>

          <div class="product-price">
            <span class="price-current">{{ product.price | money }}</span>
            {% if product.compare_at_price > product.price %}
              <span class="price-compare">{{ product.compare_at_price | money }}</span>
              <span class="price-save">Save {{ product.compare_at_price | minus: product.price | money }}</span>
            {% endif %}
          </div>

          <div class="course-details">
            {% if product.metafields.course.duration %}
              <div class="detail-item">
                <span class="detail-label">Duration:</span>
                <span class="detail-value">{{ product.metafields.course.duration }}</span>
              </div>
            {% endif %}
            
            {% if product.metafields.course.format %}
              <div class="detail-item">
                <span class="detail-label">Format:</span>
                <span class="detail-value">{{ product.metafields.course.format }}</span>
              </div>
            {% endif %}
            
            {% if product.metafields.course.instructor %}
              <div class="detail-item">
                <span class="detail-label">Instructor:</span>
                <span class="detail-value">{{ product.metafields.course.instructor }}</span>
              </div>
            {% endif %}
          </div>

          {% comment %} Prerequisites if any {% endcomment %}
          {% if product.metafields.course.prerequisites %}
            <div class="prerequisites">
              <h3>Prerequisites</h3>
              <p>{{ product.metafields.course.prerequisites }}</p>
            </div>
          {% endif %}

          {% comment %} Product Form {% endcomment %}
          <div class="product-form-container">
            <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="product-form">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              
              {% unless product.has_only_default_variant %}
                <div class="variant-picker">
                  {% for option in product.options_with_values %}
                    <div class="option-group">
                      <label class="option-label">{{ option.name }}</label>
                      <div class="option-values">
                        {% for value in option.values %}
                          <input type="radio" 
                                 name="options[{{ option.name }}]" 
                                 value="{{ value }}" 
                                 id="option-{{ option.position }}-{{ forloop.index0 }}"
                                 {% if option.selected_value == value %}checked{% endif %}>
                          <label for="option-{{ option.position }}-{{ forloop.index0 }}" class="option-value">
                            {{ value }}
                          </label>
                        {% endfor %}
                      </div>
                    </div>
                  {% endfor %}
                </div>
              {% endunless %}
              
              <div class="quantity-selector">
                <label for="quantity" class="quantity-label">Quantity</label>
                <div class="quantity-input">
                  <button type="button" class="quantity-btn quantity-minus">-</button>
                  <input type="number" 
                         name="quantity" 
                         id="quantity" 
                         min="1" 
                         value="1" 
                         class="quantity-field">
                  <button type="button" class="quantity-btn quantity-plus">+</button>
                </div>
              </div>

              <button type="submit" 
                      class="btn btn--primary btn--full-width add-to-cart-btn"
                      {% unless product.available %}disabled{% endunless %}>
                {% if product.available %}
                  Enroll Now - {{ product.price | money }}
                {% else %}
                  Sold Out
                {% endif %}
              </button>
            </form>
          </div>

          {% comment %} What's Included section {% endcomment %}
          <div class="whats-included">
            <h3>What's Included</h3>
            <ul class="included-list">
              <li>✓ Lifetime access to course materials</li>
              <li>✓ Professional certificate upon completion</li>
              {% if product.metafields.course.ceu_credits %}
                <li>✓ {{ product.metafields.course.ceu_credits }} Continuing Education Units (CEUs)</li>
              {% endif %}
              <li>✓ Mobile and desktop access</li>
              <li>✓ Progress tracking and bookmarks</li>
              <li>✓ Expert instructor support</li>
              {% if product.metafields.course.downloadable_resources %}
                <li>✓ Downloadable course resources</li>
              {% endif %}
            </ul>
          </div>
        </div>
      </div>

      {% comment %} Course Description and Curriculum {% endcomment %}
      <div class="course-description">
        <div class="description-tabs">
          <nav class="tab-nav">
            <button class="tab-btn tab-btn--active" data-tab="overview">Overview</button>
            <button class="tab-btn" data-tab="curriculum">Curriculum</button>
            <button class="tab-btn" data-tab="instructor">Instructor</button>
            <button class="tab-btn" data-tab="reviews">Reviews</button>
          </nav>

          <div class="tab-content">
            <div class="tab-panel tab-panel--active" id="overview">
              <div class="description-content">
                {{ product.description }}
                
                {% if product.metafields.course.learning_objectives %}
                  <h3>Learning Objectives</h3>
                  <div class="learning-objectives">
                    {{ product.metafields.course.learning_objectives }}
                  </div>
                {% endif %}
              </div>
            </div>

            <div class="tab-panel" id="curriculum">
              {% if product.metafields.course.curriculum %}
                <div class="curriculum-content">
                  {{ product.metafields.course.curriculum }}
                </div>
              {% else %}
                <div class="curriculum-placeholder">
                  <p>Comprehensive curriculum covering all essential topics for professional safety education in the amusement industry.</p>
                </div>
              {% endif %}
            </div>

            <div class="tab-panel" id="instructor">
              <div class="instructor-info">
                {% if product.metafields.course.instructor_bio %}
                  {{ product.metafields.course.instructor_bio }}
                {% else %}
                  <p>Taught by industry experts with years of practical experience in amusement park safety and operations.</p>
                {% endif %}
              </div>
            </div>

            <div class="tab-panel" id="reviews">
              <div id="shopify-product-reviews" data-id="{{ product.id }}">
                {% comment %} Product reviews will be loaded here {% endcomment %}
                <p>Reviews will be displayed here.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      {% comment %} Related Courses {% endcomment %}
      {% if collections.courses.products.size > 1 %}
        <div class="related-courses">
          <h2>Related Courses</h2>
          <div class="related-grid">
            {% for related_product in collections.courses.products limit: 4 %}
              {% unless related_product.id == product.id %}
                {% render 'course-card-professional', product: related_product %}
              {% endunless %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<!-- CSS extracted to /assets/product-course.css -->

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Tab functionality
  const tabBtns = document.querySelectorAll('.tab-btn');
  const tabPanels = document.querySelectorAll('.tab-panel');
  
  tabBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      const targetTab = this.dataset.tab;
      
      // Remove active classes
      tabBtns.forEach(b => b.classList.remove('tab-btn--active'));
      tabPanels.forEach(p => p.classList.remove('tab-panel--active'));
      
      // Add active classes
      this.classList.add('tab-btn--active');
      document.getElementById(targetTab).classList.add('tab-panel--active');
    });
  });
  
  // Quantity selector
  const quantityField = document.getElementById('quantity');
  const quantityMinus = document.querySelector('.quantity-minus');
  const quantityPlus = document.querySelector('.quantity-plus');
  
  if (quantityMinus && quantityPlus && quantityField) {
    quantityMinus.addEventListener('click', function() {
      const current = parseInt(quantityField.value);
      if (current > 1) {
        quantityField.value = current - 1;
      }
    });
    
    quantityPlus.addEventListener('click', function() {
      const current = parseInt(quantityField.value);
      quantityField.value = current + 1;
    });
  }
  
  // Variant selection
  const variantRadios = document.querySelectorAll('input[name^="options"]');
  variantRadios.forEach(radio => {
    radio.addEventListener('change', function() {
      // Handle variant selection logic here
      console.log('Variant selected:', this.value);
    });
  });
});
</script>
