      <section class="contact-forms-section page-section section-alt-1">
        <div class="section-header">
          <h2>How Can We Help?</h2>
          <p class="section-subtitle">
            Choose the category that best describes your inquiry for faster, 
            more targeted assistance from our specialized teams.
          </p>
        </div>
        
        <div class="contact-forms-grid">
          <!-- Course Inquiry Form -->
          <div class="contact-form-card">
            <div class="form-header">
              <div class="form-icon">üéì</div>
              <h3>Course Inquiries</h3>
              <p>Questions about courses, enrollment, or certification requirements</p>
            </div>
            
            <form class="contact-form" action="/contact" method="post" accept-charset="UTF-8">
              <input type="hidden" name="form_type" value="contact">
              <input type="hidden" name="utf8" value="‚úì">
              <input type="hidden" name="contact[inquiry_type]" value="course_inquiry">
              
              <div class="form-row">
                <div class="form-group">
                  <label for="course_name">Name *</label>
                  <input type="text" id="course_name" name="contact[name]" required>
                </div>
                <div class="form-group">
                  <label for="course_email">Email *</label>
                  <input type="email" id="course_email" name="contact[email]" required>
                </div>
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="course_phone">Phone</label>
                  <input type="tel" id="course_phone" name="contact[phone]">
                </div>
                <div class="form-group">
                  <label for="course_organization">Organization</label>
                  <input type="text" id="course_organization" name="contact[organization]">
                </div>
              </div>
              
              <div class="form-group">
                <label for="course_interest">Course Interest</label>
                <select id="course_interest" name="contact[course_interest]">
                  <option value="">Select a course category</option>
                  <option value="safety_regulations">Safety Regulations</option>
                  <option value="operations_training">Operations Training</option>
                  <option value="water_park_safety">Water Park Safety</option>
                  <option value="ride_inspection">Ride Inspection</option>
                  <option value="electrical_systems">Electrical Systems</option>
                  <option value="emergency_procedures">Emergency Procedures</option>
                  <option value="guest_services">Guest Services</option>
                  <option value="management_training">Management Training</option>
                </select>
              </div>
              
              <div class="form-group">
                <label for="course_message">Questions or Specific Requirements *</label>
                <textarea id="course_message" name="contact[body]" rows="4" required placeholder="Please describe your professional development goals, specific course questions, or certification requirements..."></textarea>
              </div>
              
              <button type="submit" class="btn btn--primary">Send Course Inquiry</button>
            </form>
          </div>
          
