                  <option value="">Select facility type</option>
                  <option value="theme_park">Theme Park</option>
                  <option value="water_park">Water Park</option>
                  <option value="family_entertainment">Family Entertainment Center</option>
                  <option value="pier_carnival">Pier/Carnival</option>
                  <option value="trampoline_park">Trampoline Park</option>
                  <option value="indoor_entertainment">Indoor Entertainment</option>
                  <option value="municipal_recreation">Municipal Recreation</option>
                  <option value="other">Other</option>
                </select>
              </div>
              
              <div class="form-group">
                <label for="corp_message">Training Requirements *</label>
                <textarea id="corp_message" name="contact[body]" rows="4" required placeholder="Describe your training objectives, timeline, budget considerations, and any specific compliance requirements..."></textarea>
              </div>
              
              <button type="submit" class="btn btn--primary">Request Corporate Consultation</button>
            </form>
          </div>
          
