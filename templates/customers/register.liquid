<div class="aai-container page-width">
  <h1>{{ 'customer.register_page.title' | t }}</h1>
  {%- form 'create_customer' -%}
    {%- if form.errors -%}
      <div class="form-message form-message--error">
        {{ form.errors | default_errors }}
      </div>
    {%- endif -%}

    <label for="FirstName">{{ 'customer.register_page.first_name' | t }}</label>
    <input type="text" name="customer[first_name]" id="FirstName" autocomplete="given-name" {% if form.errors contains 'first_name' %}aria-invalid="true"{% endif %}>

    <label for="LastName">{{ 'customer.register_page.last_name' | t }}</label>
    <input type="text" name="customer[last_name]" id="LastName" autocomplete="family-name" {% if form.errors contains 'last_name' %}aria-invalid="true"{% endif %}>

    <label for="Email">{{ 'customer.register_page.email' | t }}</label>
    <input type="email" name="customer[email]" id="Email" autocomplete="email" autocorrect="off" autocapitalize="off" {% if form.errors contains 'email' %}aria-invalid="true"{% endif %}>

    <label for="CreatePassword">{{ 'customer.register_page.password' | t }}</label>
    <input type="password" name="customer[password]" id="CreatePassword" autocomplete="new-password" {% if form.errors contains 'password' %}aria-invalid="true"{% endif %}>

    <button type="submit">{{ 'customer.register_page.submit' | t }}</button>
    <a href="{{ routes.account_login_url }}">{{ 'customer.login_page.link_to_login' | t }}</a>
  {%- endform -%}
</div>
{{ 'customer-account.css' | asset_url | stylesheet_tag }}
