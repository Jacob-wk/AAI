{% comment %}
  Customer Account - My Courses
  Shows purchased courses with embedded Intuto access
  URL: /account (when courses are available)
{% endcomment %}

<div class="customer-account">
  <div class="account-container">
    <div class="aai-container">
      <div class="account-header">
        <h1>Welcome back, {{ customer.first_name }}!</h1>
        <p class="account-subtitle">Manage your professional development courses and track your progress.</p>
      </div>

      <div class="account-content">
        <nav class="account-nav">
          <ul class="nav-list">
            <li class="nav-item nav-item--active">
              <a href="/account" class="nav-link">My Courses</a>
            </li>
            <li class="nav-item">
              <a href="{{ routes.account_url }}" class="nav-link">Account Details</a>
            </li>
            <li class="nav-item">
              <a href="{{ routes.account_addresses_url }}" class="nav-link">Addresses</a>
            </li>
            <li class="nav-item">
              <a href="{{ routes.account_logout_url }}" class="nav-link">Sign Out</a>
            </li>
          </ul>
        </nav>

        <main class="account-main">
          {% comment %} Get customer's purchased courses from orders {% endcomment %}
          {% assign purchased_courses = '' %}
          {% for order in customer.orders %}
            {% if order.financial_status == 'paid' %}
              {% for line_item in order.line_items %}
                {% if line_item.product.product_type == 'Course' %}
                  {% assign course_info = line_item.product.id | append: ',' | append: line_item.product.handle | append: ',' | append: line_item.product.title | append: ',' | append: order.created_at | append: ';' %}
                  {% assign purchased_courses = purchased_courses | append: course_info %}
                {% endif %}
              {% endfor %}
            {% endif %}
          {% endfor %}

          {% if purchased_courses != blank %}
            <div class="courses-grid">
              {% assign courses_array = purchased_courses | split: ';' %}
              {% for course_data in courses_array %}
                {% unless course_data == blank %}
                  {% assign course_parts = course_data | split: ',' %}
                  {% assign course_id = course_parts[0] %}
                  {% assign course_handle = course_parts[1] %}
                  {% assign course_title = course_parts[2] %}
                  {% assign purchase_date = course_parts[3] %}
                  
                  {% comment %} Get the actual product for full details {% endcomment %}
                  {% assign course_product = all_products[course_handle] %}
                  
                  <div class="course-card-purchased">
                    <div class="course-image">
                      {% if course_product.featured_image %}
                        <img src="{{ course_product.featured_image | img_url: '300x200' }}" 
                             alt="{{ course_product.title }}"
                             loading="lazy">
                      {% else %}
                        <div class="course-placeholder">
                          {% render 'icon-search' %}
                        </div>
                      {% endif %}
                      
                      {% comment %} Progress overlay {% endcomment %}
                      {% assign progress = customer.metafields.course_progress[course_handle] | default: 0 %}
                      {% if progress > 0 %}
                        <div class="progress-overlay">
                          <div class="progress-circle">
                            <span class="progress-percent">{{ progress }}%</span>
                          </div>
                        </div>
                      {% endif %}
                    </div>
                    
                    <div class="course-content">
                      <h3 class="course-title">{{ course_product.title | default: course_title }}</h3>
                      
                      <div class="course-meta">
                        {% if course_product.metafields.course.ceu_credits %}
                          <span class="meta-item">
                            <strong>{{ course_product.metafields.course.ceu_credits }}</strong> CEU Credits
                          </span>
                        {% endif %}
                        
                        {% if course_product.metafields.course.duration %}
                          <span class="meta-item">
                            <strong>{{ course_product.metafields.course.duration }}</strong> Duration
                          </span>
                        {% endif %}
                      </div>
                      
                      <p class="purchase-date">Purchased: {{ purchase_date | date: "%B %d, %Y" }}</p>
                      
                      <div class="course-actions">
                        {% if progress >= 100 %}
                          <a href="/pages/course-access-{{ course_handle }}" class="btn btn--secondary">
                            Review Course
                          </a>
                          <span class="completion-badge">âœ“ Completed</span>
                        {% elsif progress > 0 %}
                          <a href="/pages/course-access-{{ course_handle }}" class="btn btn--primary">
                            Continue Learning
                          </a>
                          <div class="progress-bar-small">
                            <div class="progress-fill-small" style="width: {{ progress }}%"></div>
                          </div>
                        {% else %}
                          <a href="/pages/course-access-{{ course_handle }}" class="btn btn--primary">
                            Start Course
                          </a>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                {% endunless %}
              {% endfor %}
            </div>
            
            {% comment %} Learning Progress Summary {% endcomment %}
            <div class="progress-summary">
              <h2>Your Learning Progress</h2>
              <div class="summary-grid">
                <div class="summary-card">
                  <div class="summary-number">{{ courses_array.size | minus: 1 }}</div>
                  <div class="summary-label">Courses Purchased</div>
                </div>
                
                {% assign completed_count = 0 %}
                {% assign in_progress_count = 0 %}
                {% for course_data in courses_array %}
                  {% unless course_data == blank %}
                    {% assign course_parts = course_data | split: ',' %}
                    {% assign course_handle = course_parts[1] %}
                    {% assign progress = customer.metafields.course_progress[course_handle] | default: 0 %}
                    {% if progress >= 100 %}
                      {% assign completed_count = completed_count | plus: 1 %}
                    {% elsif progress > 0 %}
                      {% assign in_progress_count = in_progress_count | plus: 1 %}
                    {% endif %}
                  {% endunless %}
                {% endfor %}
                
                <div class="summary-card">
                  <div class="summary-number">{{ completed_count }}</div>
                  <div class="summary-label">Completed</div>
                </div>
                
                <div class="summary-card">
                  <div class="summary-number">{{ in_progress_count }}</div>
                  <div class="summary-label">In Progress</div>
                </div>
                
                {% comment %} Calculate total CEU credits earned {% endcomment %}
                {% assign total_ceu = 0 %}
                {% for course_data in courses_array %}
                  {% unless course_data == blank %}
                    {% assign course_parts = course_data | split: ',' %}
                    {% assign course_handle = course_parts[1] %}
                    {% assign progress = customer.metafields.course_progress[course_handle] | default: 0 %}
                    {% if progress >= 100 %}
                      {% assign course_product = all_products[course_handle] %}
                      {% if course_product.metafields.course.ceu_credits %}
                        {% assign ceu_value = course_product.metafields.course.ceu_credits | plus: 0 %}
                        {% assign total_ceu = total_ceu | plus: ceu_value %}
                      {% endif %}
                    {% endif %}
                  {% endunless %}
                {% endfor %}
                
                <div class="summary-card">
                  <div class="summary-number">{{ total_ceu }}</div>
                  <div class="summary-label">CEU Credits Earned</div>
                </div>
              </div>
            </div>
            
          {% else %}
            {% comment %} No courses purchased yet {% endcomment %}
            <div class="empty-state">
              <div class="empty-state__content">
                <div class="empty-state__icon">
                  {% render 'icon-search' %}
                </div>
                <h2>Start Your Professional Development Journey</h2>
                <p>You haven't purchased any courses yet. Explore our comprehensive safety education programs designed for amusement industry professionals.</p>
                <a href="/collections/courses" class="btn btn--primary">Browse Courses</a>
              </div>
            </div>
          {% endif %}
        </main>
      </div>
    </div>
  </div>
</div>

<!-- CSS extracted to /assets/customer-account.css -->
