{% comment %}
  Customer Account - Professional Course Access
  Simple approach using Code Selling App + Intuto Multi Token
  URL: /account
{% endcomment %}

{{ 'section-user-dashboard.css' | asset_url | stylesheet_tag }}

<div class="customer-account">
  <div class="page-width">
    <div class="account-header">
      <h1>Welcome back, {{ customer.first_name | default: 'Professional' }}!</h1>
      <p class="account-subtitle">Access your professional development courses and manage your account.</p>
    </div>

    <div class="account-content">
      <nav class="account-nav">
        <ul class="nav-list">
          <li class="nav-item nav-item--active">
            <a href="/account" class="nav-link">My Courses</a>
          </li>
          <li class="nav-item">
            <a href="{{ routes.account_url }}" class="nav-link">Account Details</a>
          </li>
          <li class="nav-item">
            <a href="{{ routes.account_addresses_url }}" class="nav-link">Addresses</a>
          </li>
          <li class="nav-item">
            <a href="{{ routes.account_logout_url }}" class="nav-link">Sign Out</a>
          </li>
        </ul>
      </nav>

      <!-- Course Access Section -->
      <div class="account-main">
        <div class="account-content">
          <h2>Account Dashboard</h2>
          <p>Welcome to your account dashboard. Here you can manage your account settings and view your order history.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.customer-account {
  padding: 2rem 0;
  min-height: 50vh;
}

.account-header {
  text-align: center;
  margin-bottom: 3rem;
}

.account-header h1 {
  font-size: 2.5rem;
  color: #1e3a5f;
  margin-bottom: 0.5rem;
}

.account-subtitle {
  font-size: 1.125rem;
  color: #6b7280;
}

.account-content {
  max-width: 1200px;
  margin: 0 auto;
}

.account-nav {
  margin-bottom: 3rem;
}

.nav-list {
  display: flex;
  justify-content: center;
  gap: 2rem;
  list-style: none;
  padding: 0;
  border-bottom: 1px solid #e5e7eb;
}

.nav-item {
  position: relative;
}

.nav-link {
  display: block;
  padding: 1rem 1.5rem;
  color: #6b7280;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.3s ease;
}

.nav-item--active .nav-link,
.nav-link:hover {
  color: #1e3a5f;
}

.nav-item--active::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 0;
  right: 0;
  height: 2px;
  background: #ff6b35;
}

.account-main {
  background: white;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  border: 1px solid #e5e7eb;
}

@media (max-width: 768px) {
  .account-header h1 {
    font-size: 2rem;
  }
  
  .nav-list {
    flex-direction: column;
    gap: 0;
  }
  
  .nav-link {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #f3f4f6;
  }
  
  .nav-item--active::after {
    display: none;
  }
  
  .account-main {
    padding: 1.5rem;
  }
}
</style>