{% comment %}
  Customer Account - Simplified Course Access
  Uses Code Selling App + Intuto Multi Token approach
  Professional messaging for FEC operators
{% endcomment %}

{{ 'customer-account-simple.css' | asset_url | stylesheet_tag }}

<div class="customer-account">
  <div class="account-container">
    <div class="aai-container">
      <div class="account-header">
        <h1>Welcome back, {{ customer.first_name }}!</h1>
        <p class="account-subtitle">Manage your professional development courses and track your progress.</p>
      </div>

      <div class="account-content">
        <nav class="account-nav">
          <ul class="nav-list">
            <li class="nav-item nav-item--active">
              <a href="/account" class="nav-link">My Courses</a>
            </li>
            <li class="nav-item">
              <a href="{{ routes.account_url }}" class="nav-link">Account Details</a>
            </li>
            <li class="nav-item">
              <a href="{{ routes.account_addresses_url }}" class="nav-link">Addresses</a>
            </li>
            <li class="nav-item">
              <a href="{{ routes.account_logout_url }}" class="nav-link">Sign Out</a>
            </li>
          </ul>
        </nav>

        <main class="account-main">
          {% comment %} Use simplified course access approach {% endcomment %}
          {% render 'course-access-simple' %}
        </main>
      </div>
    </div>
  </div>
</div>
