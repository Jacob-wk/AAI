{% comment %}
COPILOT CONTEXT:
- Main homepage template showcasing AAI LMS professional design
- Matches aai-lms-mockup.html exactly with authority aesthetic
- Professional safety education platform (not casual e-commerce)
- Color scheme: Authority Navy (#1e3a5f), Safety Orange (#ff6b35), Electric Blue (#3498db)
{% endcomment %}

{%- assign hero_section = section.settings -%}

<div class="aai-homepage">
  <!-- Hero Section with Authority Aesthetic -->
  {% section 'hero-authority' %}
  
  <!-- Course Catalog Section -->
  {% section 'course-catalog' %}
  
  <!-- User Dashboard Section (for logged-in users) -->
  {% if customer %}
    {% section 'user-dashboard' %}
  {% else %}
    <!-- Guest Demo Section -->
    <section class="aai-demo-section">
      <div class="aai-container">
        <div class="aai-demo-content fade-in">
          <h2 class="slide-up anim-delay-1">Experience Our Learning Platform</h2>
          <p class="slide-up anim-delay-2">See how industry professionals advance their careers with AAI's comprehensive safety education programs.</p>
          
          <div class="aai-demo-grid">
            <!-- Demo Course Card -->
            <div class="aai-course-card aai-demo-card slide-up anim-delay-3">
              {% render 'course-card-demo', 
                title: 'Ride Safety Inspector Certification', 
                duration: '6 hours',
                level: 'Intermediate',
                price: 299,
                image: 'demo-course-inspector.jpg',
                product_id: 'demo-1'
              %}
            </div>
            
            <!-- Demo Progress Tracker -->
            <div class="aai-demo-progress">
              <h3>Track Your Progress</h3>
              {% render 'enrolled-course-demo' %}
              {% render 'achievement-badges' %}
            </div>
          </div>
          
          <div class="aai-demo-cta">
            <a href="{{ routes.account_register_url }}" class="aai-btn aai-btn-primary">Start Learning Today</a>
            <a href="/pages/about" class="aai-btn aai-btn-secondary">Learn More About AAI</a>
          </div>
        </div>
      </div>
    </section>
  {% endif %}
  
  <!-- Industry Authority Section -->
  <section class="aai-authority-section">
    <div class="aai-container">
      <div class="aai-authority-content">
        <div class="aai-authority-text">
          <h2>Industry-Leading Safety Education</h2>
          <p>Trusted by over 500+ amusement industry professionals, AAI has been setting the standard for safety education since 2025. Our comprehensive programs are developed by industry experts and recognized by leading organizations.</p>
          
          <div class="aai-stats-grid">
            <div class="aai-stat">
              <span class="aai-stat-number">500+</span>
              <span class="aai-stat-label">Certified Professionals</span>
            </div>
            <div class="aai-stat">
              <span class="aai-stat-number">15+</span>
              <span class="aai-stat-label">Years Experience</span>
            </div>
            <div class="aai-stat">
              <span class="aai-stat-number">98%</span>
              <span class="aai-stat-label">Pass Rate</span>
            </div>
          </div>
        </div>
        
        <div class="aai-authority-credentials">
          <h3>Industry Accreditations</h3>
          <div class="aai-credentials-grid">
            <div class="aai-credential">
              <img src="{{ 'credential-iaapa.svg' | asset_url }}" alt="IAAPA Member" loading="lazy">
              <span>IAAPA Member</span>
            </div>
            <div class="aai-credential">
              <img src="{{ 'credential-astm.svg' | asset_url }}" alt="ASTM F24 Committee" loading="lazy">
              <span>ASTM F24</span>
            </div>
            <div class="aai-credential">
              <img src="{{ 'credential-naarso.svg' | asset_url }}" alt="NAARSO Certified" loading="lazy">
              <span>NAARSO</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  
  <!-- Call to Action Section -->
  <section class="aai-cta-section">
    <div class="aai-container">
      <div class="aai-cta-content">
        <h2>Ready to Advance Your Career?</h2>
        <p>Join the industry's most respected safety education platform and take your professional development to the next level.</p>
        
        <div class="aai-cta-buttons">
          {% unless customer %}
            <a href="{{ routes.account_register_url }}" class="aai-btn aai-btn-primary aai-btn-large">Get Started Today</a>
            <a href="{{ routes.collections_url }}" class="aai-btn aai-btn-secondary aai-btn-large">Browse Courses</a>
          {% else %}
            <a href="{{ routes.collections_url }}" class="aai-btn aai-btn-primary aai-btn-large">Explore Courses</a>
            <a href="{{ routes.account_url }}" class="aai-btn aai-btn-secondary aai-btn-large">My Dashboard</a>
          {% endunless %}
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Inline CSS extracted to /assets/homepage.css -->
