  Course Catalog Collection Template
  Professional education course catalog with embedded Intuto previews
{% endcomment %}

<div class="course-catalog-page">
  {% render 'aai-header' %}
  
  <div class="catalog-hero">
    <div class="aai-container">
      <div class="hero-content">
        <h1 class="hero-title">Professional Safety Education</h1>
        <p class="hero-subtitle">
          Advance your career with industry-leading safety education courses designed for amusement park professionals.
          Earn CEU credits and certifications recognized throughout the industry.
        </p>
        
        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-number">{{ collections.courses.products.size }}</div>
            <div class="stat-label">Courses Available</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">1000+</div>
            <div class="stat-label">Professionals Trained</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">IAAPA</div>
            <div class="stat-label">Certified</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="catalog-content">
    <div class="aai-container">
      {% comment %} Filter and Search Section {% endcomment %}
      <div class="catalog-filters">
        <div class="filter-header">
          <h2>Find Your Course</h2>
          <div class="filter-controls">
            <div class="search-box">
              <input type="text" 
                     id="course-search" 
                     placeholder="Search courses..."
                     class="search-input">
              <button class="search-btn">
                {% render 'icon-search' %}
              </button>
            </div>
            
            <div class="filter-dropdown">
              <select id="level-filter" class="filter-select">
                <option value="">All Levels</option>
                <option value="beginner">Beginner</option>
                <option value="intermediate">Intermediate</option>
                <option value="advanced">Advanced</option>
              </select>
            </div>
            
            <div class="filter-dropdown">
              <select id="category-filter" class="filter-select">
                <option value="">All Categories</option>
                <option value="safety">Safety Management</option>
                <option value="operations">Operations</option>
                <option value="maintenance">Maintenance</option>
                <option value="leadership">Leadership</option>
              </select>
            </div>
            
            <div class="filter-dropdown">
              <select id="ceu-filter" class="filter-select">
                <option value="">All CEU Credits</option>
                <option value="1-2">1-2 Credits</option>
                <option value="3-5">3-5 Credits</option>
                <option value="6+">6+ Credits</option>
              </select>
            </div>
          </div>
        </div>
      </div>

      {% comment %} Featured Courses Section {% endcomment %}
      {% assign featured_courses = collections.courses.products | where: 'metafields.course.featured', 'true' %}
      {% if featured_courses.size > 0 %}
        <div class="featured-courses">
          <h2>Featured Courses</h2>
          <div class="featured-grid">
            {% for product in featured_courses limit: 3 %}
              <div class="featured-course-card">
                <div class="featured-image">
                  {% if product.featured_image %}
                    <img src="{{ product.featured_image | img_url: '400x250' }}" 
                         alt="{{ product.title }}"
                         loading="lazy">
                  {% else %}
                    <div class="image-placeholder">
                      {% render 'icon-search' %}
                    </div>
                  {% endif %}
                  
                  {% if product.metafields.course.preview_video %}
                    <div class="preview-overlay">
                      <button class="play-btn" onclick="openPreview('{{ product.metafields.course.preview_video }}', '{{ product.title }}')">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M8 5v14l11-7z"/>
                        </svg>
                      </button>
                    </div>
                  {% endif %}
                </div>
                
                <div class="featured-content">
                  <div class="featured-badges">
                    {% if product.metafields.course.ceu_credits %}
                      <span class="badge badge--ceu">{{ product.metafields.course.ceu_credits }} CEU</span>
                    {% endif %}
                    <span class="badge badge--featured">Featured</span>
                  </div>
                  
                  <h3 class="featured-title">{{ product.title }}</h3>
                  <p class="featured-description">{{ product.description | strip_html | truncate: 120 }}</p>
                  
                  <div class="featured-meta">
                    {% if product.metafields.course.duration %}
                      <span class="meta-item">‚è±Ô∏è {{ product.metafields.course.duration }}</span>
                    {% endif %}
                    {% if product.metafields.course.level %}
                      <span class="meta-item">üìä {{ product.metafields.course.level | capitalize }}</span>
                    {% endif %}
                  </div>
                  
                  <div class="featured-footer">
                    <div class="featured-price">{{ product.price | money }}</div>
                    <a href="{{ product.url }}" class="btn btn--primary">Learn More</a>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}

