{
  "sections": {
    "blog_header": {
      "type": "section",
      "blocks": {
        "heading": {
          "type": "text",
          "settings": {
            "text": "<h1>{{ blog.title | default: 'Safety Education Blog' }}</h1>",
            "type_preset": "h1",
            "alignment": "center",
            "padding-block-end": 16
          }
        },
        "description": {
          "type": "text",
          "settings": {
            "text": "<p>Stay updated with the latest insights, industry trends, and safety education news from AAI experts.</p>",
            "type_preset": "paragraph",
            "alignment": "center",
            "padding-block-end": 24
          }
        }
      },
      "block_order": ["heading", "description"],
      "settings": {
        "content_direction": "column",
        "horizontal_alignment_flex_direction_column": "center",
        "vertical_alignment_flex_direction_column": "center",
        "color_scheme": "scheme-1",
        "padding-block-start": 40,
        "padding-block-end": 20
      }
    },
    "main": {
      "type": "main-blog",
      "settings": {
        "posts_per_page": 5,
        "show_image": true,
        "show_date": true,
        "show_author": false,
        "show_excerpt": true
      }
    }
  },
  "order": [
    "blog_header",
    "main"
  ]
}
