<script>
document.addEventListener('DOMContentLoaded', function() {
  // Help search functionality
  const searchInput = document.getElementById('help-search');
  const faqQuestions = document.querySelectorAll('.faq-question');
  
  searchInput.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();
    
    faqQuestions.forEach(question => {
      const summary = question.querySelector('summary').textContent.toLowerCase();
      const answer = question.querySelector('.faq-answer').textContent.toLowerCase();
      
      if (summary.includes(searchTerm) || answer.includes(searchTerm)) {
        question.style.display = 'block';
        
        // Highlight search terms if found
        if (searchTerm && searchTerm.length > 2) {
          question.classList.add('search-match');
        }
      } else {
        question.style.display = 'none';
        question.classList.remove('search-match');
      }
    });
  });
  
  // Category link smooth scrolling
  document.querySelectorAll('.category-link').forEach(link => {
    link.addEventListener('click', function(e) {
      if (this.getAttribute('href').startsWith('#')) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }
    });
  });
  
  // Live chat simulation
  document.querySelector('.chat-btn')?.addEventListener('click', function() {
    alert('Live chat would connect you to our support team during business hours. For now, please use email or phone support.');
  });
});
</script>
