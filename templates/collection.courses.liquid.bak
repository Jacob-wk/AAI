{% comment %}
  Course Catalog Collection Template
  Professional education course catalog with embedded Intuto previews
{% endcomment %}

<div class="course-catalog-page">
  {% render 'aai-header' %}
  
  <div class="catalog-hero">
    <div class="aai-container">
      <div class="hero-content">
        <h1 class="hero-title">Professional Safety Education</h1>
        <p class="hero-subtitle">
          Advance your career with industry-leading safety education courses designed for amusement park professionals.
          Earn CEU credits and certifications recognized throughout the industry.
        </p>
        
        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-number">{{ collections.courses.products.size }}</div>
            <div class="stat-label">Courses Available</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">1000+</div>
            <div class="stat-label">Professionals Trained</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">IAAPA</div>
            <div class="stat-label">Certified</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="catalog-content">
    <div class="aai-container">
      {% comment %} Filter and Search Section {% endcomment %}
      <div class="catalog-filters">
        <div class="filter-header">
          <h2>Find Your Course</h2>
          <div class="filter-controls">
            <div class="search-box">
              <input type="text" 
                     id="course-search" 
                     placeholder="Search courses..."
                     class="search-input">
              <button class="search-btn">
                {% render 'icon-search' %}
              </button>
            </div>
            
            <div class="filter-dropdown">
              <select id="level-filter" class="filter-select">
                <option value="">All Levels</option>
                <option value="beginner">Beginner</option>
                <option value="intermediate">Intermediate</option>
                <option value="advanced">Advanced</option>
              </select>
            </div>
            
            <div class="filter-dropdown">
              <select id="category-filter" class="filter-select">
                <option value="">All Categories</option>
                <option value="safety">Safety Management</option>
                <option value="operations">Operations</option>
                <option value="maintenance">Maintenance</option>
                <option value="leadership">Leadership</option>
              </select>
            </div>
            
            <div class="filter-dropdown">
              <select id="ceu-filter" class="filter-select">
                <option value="">All CEU Credits</option>
                <option value="1-2">1-2 Credits</option>
                <option value="3-5">3-5 Credits</option>
                <option value="6+">6+ Credits</option>
              </select>
            </div>
          </div>
        </div>
      </div>

      {% comment %} Featured Courses Section {% endcomment %}
      {% assign featured_courses = collections.courses.products | where: 'metafields.course.featured', 'true' %}
      {% if featured_courses.size > 0 %}
        <div class="featured-courses">
          <h2>Featured Courses</h2>
          <div class="featured-grid">
            {% for product in featured_courses limit: 3 %}
              <div class="featured-course-card">
                <div class="featured-image">
                  {% if product.featured_image %}
                    <img src="{{ product.featured_image | img_url: '400x250' }}" 
                         alt="{{ product.title }}"
                         loading="lazy">
                  {% else %}
                    <div class="image-placeholder">
                      {% render 'icon-search' %}
                    </div>
                  {% endif %}
                  
                  {% if product.metafields.course.preview_video %}
                    <div class="preview-overlay">
                      <button class="play-btn" onclick="openPreview('{{ product.metafields.course.preview_video }}', '{{ product.title }}')">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M8 5v14l11-7z"/>
                        </svg>
                      </button>
                    </div>
                  {% endif %}
                </div>
                
                <div class="featured-content">
                  <div class="featured-badges">
                    {% if product.metafields.course.ceu_credits %}
                      <span class="badge badge--ceu">{{ product.metafields.course.ceu_credits }} CEU</span>
                    {% endif %}
                    <span class="badge badge--featured">Featured</span>
                  </div>
                  
                  <h3 class="featured-title">{{ product.title }}</h3>
                  <p class="featured-description">{{ product.description | strip_html | truncate: 120 }}</p>
                  
                  <div class="featured-meta">
                    {% if product.metafields.course.duration %}
                      <span class="meta-item">‚è±Ô∏è {{ product.metafields.course.duration }}</span>
                    {% endif %}
                    {% if product.metafields.course.level %}
                      <span class="meta-item">üìä {{ product.metafields.course.level | capitalize }}</span>
                    {% endif %}
                  </div>
                  
                  <div class="featured-footer">
                    <div class="featured-price">{{ product.price | money }}</div>
                    <a href="{{ product.url }}" class="btn btn--primary">Learn More</a>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}

      {% comment %} All Courses Grid {% endcomment %}
      <div class="all-courses">
        <div class="courses-header">
          <h2>All Courses</h2>
          <div class="view-controls">
            <button class="view-btn view-btn--active" data-view="grid">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <rect x="3" y="3" width="7" height="7"/>
                <rect x="14" y="3" width="7" height="7"/>
                <rect x="3" y="14" width="7" height="7"/>
                <rect x="14" y="14" width="7" height="7"/>
              </svg>
            </button>
            <button class="view-btn" data-view="list">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <line x1="8" y1="6" x2="21" y2="6"/>
                <line x1="8" y1="12" x2="21" y2="12"/>
                <line x1="8" y1="18" x2="21" y2="18"/>
                <line x1="3" y1="6" x2="3.01" y2="6"/>
                <line x1="3" y1="12" x2="3.01" y2="12"/>
                <line x1="3" y1="18" x2="3.01" y2="18"/>
              </svg>
            </button>
          </div>
        </div>
        
        <div id="courses-grid" class="courses-grid courses-grid--grid">
          {% for product in collections.courses.products %}
            <div class="course-item" 
                 data-level="{{ product.metafields.course.level | default: '' }}"
                 data-category="{{ product.metafields.course.category | default: '' }}"
                 data-ceu="{{ product.metafields.course.ceu_credits | default: '0' }}"
                 data-title="{{ product.title | downcase }}">
              {% render 'course-card-professional', product: product %}
            </div>
          {% endfor %}
        </div>
        
        {% comment %} No results message {% endcomment %}
        <div id="no-results" class="no-results" style="display: none;">
          <div class="no-results-content">
            <div class="no-results-icon">
              {% render 'icon-search' %}
            </div>
            <h3>No Courses Found</h3>
            <p>Try adjusting your search criteria or browse our featured courses above.</p>
            <button onclick="clearFilters()" class="btn btn--secondary">Clear Filters</button>
          </div>
        </div>
      </div>

      {% comment %} Course Categories Section {% endcomment %}
      <div class="course-categories">
        <h2>Course Categories</h2>
        <div class="categories-grid">
          <div class="category-card">
            <div class="category-icon">üõ°Ô∏è</div>
            <h3>Safety Management</h3>
            <p>Comprehensive safety protocols and risk management for amusement operations.</p>
            <a href="/collections/courses?filter=safety" class="category-link">Explore Courses</a>
          </div>
          
          <div class="category-card">
            <div class="category-icon">‚öôÔ∏è</div>
            <h3>Operations</h3>
            <p>Operational excellence and best practices for efficient park management.</p>
            <a href="/collections/courses?filter=operations" class="category-link">Explore Courses</a>
          </div>
          
          <div class="category-card">
            <div class="category-icon">üîß</div>
            <h3>Maintenance</h3>
            <p>Technical maintenance procedures and equipment care standards.</p>
            <a href="/collections/courses?filter=maintenance" class="category-link">Explore Courses</a>
          </div>
          
          <div class="category-card">
            <div class="category-icon">üë•</div>
            <h3>Leadership</h3>
            <p>Leadership development and team management for industry professionals.</p>
            <a href="/collections/courses?filter=leadership" class="category-link">Explore Courses</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% comment %} Video Preview Modal {% endcomment %}
<div id="preview-modal" class="preview-modal" style="display: none;">
  <div class="modal-overlay" onclick="closePreview()"></div>
  <div class="modal-content">
    <button class="modal-close" onclick="closePreview()">√ó</button>
    <div class="modal-header">
      <h3 id="preview-title">Course Preview</h3>
    </div>
    <div class="modal-body">
      <div class="video-container">
        <iframe id="preview-iframe" 
                src="" 
                frameborder="0" 
                allowfullscreen
                title="Course Preview">
        </iframe>
      </div>
    </div>
  </div>
</div>


